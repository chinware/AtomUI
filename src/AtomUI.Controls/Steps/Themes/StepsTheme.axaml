<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atom="https://atomui.net"
    x:ClassModifier="internal">
    <ControlTheme x:Key="{x:Type atom:Steps}" TargetType="atom:Steps">
        <Setter Property="Template">
            <ControlTemplate>
                <ItemsPresenter
                    Name="{x:Static atom:StepsThemeConstants.ItemsPresenterPart}">
                    <ItemsPresenter.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Grid
                                RowSpacing="{Binding VerticalItemSpacing, RelativeSource={RelativeSource AncestorType=atom:Steps}}"
                                ColumnSpacing="{Binding HorizontalItemSpacing, RelativeSource={RelativeSource AncestorType=atom:Steps}}" />
                        </ItemsPanelTemplate>
                    </ItemsPresenter.ItemsPanel>
                </ItemsPresenter>
            </ControlTemplate>
        </Setter>

        <Setter Property="HorizontalItemSpacing" Value="0" />
        <Setter Property="VerticalItemSpacing" Value="0" />
        <Setter Property="IsMotionEnabled" Value="{DynamicResource {x:Static atom:SharedTokenKey.EnableMotion}}" />

        <Style Selector="^[Style=Default]">
            <Style Selector="^[Orientation=Horizontal]">
                <Style Selector="^[LabelPlacement=Horizontal]">
                    <Style Selector="^[SizeType=Large]">
                        <Setter Property="HorizontalItemSpacing"
                                Value="{DynamicResource {x:Static atom:SharedTokenKey.Spacing}}" />
                    </Style>
                    <Style Selector="^[SizeType=Middle]">
                        <Setter Property="HorizontalItemSpacing"
                                Value="{DynamicResource {x:Static atom:SharedTokenKey.Spacing}}" />
                    </Style>
                    <Style Selector="^[SizeType=Small]">
                        <Setter Property="HorizontalItemSpacing"
                                Value="{DynamicResource {x:Static atom:SharedTokenKey.SpacingSM}}" />
                    </Style>
                </Style>
            </Style>
            
            <Style Selector="^[Orientation=Vertical]">
                <Setter Property="VerticalItemSpacing"
                        Value="{DynamicResource {x:Static atom:StepsTokenKey.VerticalItemSpacing}}" />
            </Style>
        </Style>
        
        <Style Selector="^[ItemIndicatorType=Dot]">
            <Setter Property="HorizontalItemSpacing" Value="0" />
            <Setter Property="VerticalItemSpacing" Value="0" />
        </Style>
    </ControlTheme>
</ResourceDictionary>