<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atom="https://atomui.net"
    x:ClassModifier="internal">
    <ControlTheme x:Key="{x:Type atom:SelectHandle}" TargetType="atom:SelectHandle">
        <Setter Property="Template">
            <ControlTemplate>
                <Panel>
                    <atom:Icon Name="OpenIndicator"
                                IconInfo="{atom:IconInfoProvider Kind=DownOutlined}"
                               IsMotionEnabled="{TemplateBinding IsMotionEnabled}"
                               IsVisible="True" />
                    <atom:Icon Name="SearchIndicator"
                               IconInfo="{atom:IconInfoProvider Kind=SearchOutlined}"
                               IsMotionEnabled="{TemplateBinding IsMotionEnabled}"
                               IsVisible="False" />
                    <atom:IconButton
                        Name="{x:Static atom:SelectHandleThemeConstants.ClearButtonPart}"
                        IsMotionEnabled="{TemplateBinding IsMotionEnabled}"
                        Icon="{atom:IconProvider CloseCircleFilled}"
                        IsVisible="False" />
                </Panel>
            </ControlTemplate>
        </Setter>
        
        <Style Selector="^ /template/ atom|Icon">
            <Setter Property="NormalFilledBrush"
                    Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorTextQuaternary}}" />
            <Setter Property="DisabledFilledBrush"
                    Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorTextDisabled}}" />

            <Setter Property="Width" Value="{DynamicResource {x:Static atom:SharedTokenKey.IconSizeSM}}" />
            <Setter Property="Height" Value="{DynamicResource {x:Static atom:SharedTokenKey.IconSizeSM}}" />
        </Style>
    </ControlTheme>
</ResourceDictionary>