<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atom="https://atomui.net"
    x:ClassModifier="internal">
    <ControlTheme x:Key="{x:Type atom:SelectResultOptionsBox}" TargetType="atom:SelectResultOptionsBox">
        <Setter Property="Template">
            <ControlTemplate>
                <Panel Name="RootLayout">
                    <atom:SelectWrapPanel Name="{x:Static atom:SelectResultOptionsBoxThemeConstants.DefaultPanelPart}"/>
                </Panel>
            </ControlTemplate>
        </Setter>
        
        <Style Selector="^ /template/ atom|SelectWrapPanel#PART_DefaultPanel">
            <Setter Property="ItemSpacing" Value="{DynamicResource {x:Static atom:SharedTokenKey.SpacingXXS}}"/>
            <Setter Property="LineSpacing" Value="{DynamicResource {x:Static atom:SharedTokenKey.SpacingXXS}}"/>
        </Style>
    </ControlTheme>
</ResourceDictionary>