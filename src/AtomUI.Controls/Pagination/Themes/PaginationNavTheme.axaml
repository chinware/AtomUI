<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atom="https://atomui.net"
    x:ClassModifier="internal">
    <ControlTheme x:Key="{x:Type atom:PaginationNav}" TargetType="atom:PaginationNav">
        <Setter Property="Template">
            <ControlTemplate>
                <Border Name="{x:Static atom:PaginationNavThemeConstants.FramePart}"
                        ClipToBounds="True"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        Padding="{TemplateBinding Padding}">
                    <ItemsPresenter>
                        <ItemsPresenter.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="{Binding ItemSpacing, RelativeSource={RelativeSource AncestorType=atom:PaginationNav}}"/>
                            </ItemsPanelTemplate>
                        </ItemsPresenter.ItemsPanel>
                    </ItemsPresenter>
                </Border>
            </ControlTemplate>
        </Setter>
        
        <Style Selector="^[SizeType=Large], ^[SizeType=Middle]">
            <Setter Property="ItemSpacing" Value="{DynamicResource {x:Static atom:SharedTokenKey.UniformlyMarginXS}}"/>
        </Style>
    </ControlTheme>
</ResourceDictionary>