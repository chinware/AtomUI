<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atom="https://atomui.net"
    x:ClassModifier="internal">
    <ControlTheme x:Key="{x:Type atom:SkeletonParagraph}" TargetType="atom:SkeletonParagraph">
        <Setter Property="Template">
            <ControlTemplate>
                <StackPanel Orientation="Vertical" Name="{x:Static atom:SkeletonParagraphThemeConstants.LineLayoutPart}"/>
            </ControlTemplate>
        </Setter>
        
        <Style Selector="^ /template/ StackPanel#PART_LineLayout">
            <Setter Property="Spacing" Value="{DynamicResource {x:Static atom:SharedTokenKey.ControlHeightXS}}"/>
        </Style>
        
        <Setter Property="MotionDuration" Value="{DynamicResource {x:Static atom:SkeletonTokenKey.LoadingMotionDuration}}"/>
        <Setter Property="LoadingBackgroundStart" Value="{DynamicResource {x:Static atom:SkeletonTokenKey.LoadingBackgroundStart}}"/>
        <Setter Property="LoadingBackgroundMiddle" Value="{DynamicResource {x:Static atom:SkeletonTokenKey.LoadingBackgroundMiddle}}"/>
        <Setter Property="LoadingBackgroundEnd" Value="{DynamicResource {x:Static atom:SkeletonTokenKey.LoadingBackgroundEnd}}"/>
    </ControlTheme>
</ResourceDictionary>