<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atom="https://atomui.net"
    x:ClassModifier="internal">
    <ControlTheme x:Key="{x:Type atom:SkeletonAvatar}" TargetType="atom:SkeletonAvatar">
        <Setter Property="Template">
            <ControlTemplate>
                <Panel>
                    <Border Name="{x:Static atom:SkeletonThemeConstants.ActiveAnimationLayerPart}"
                            Background="{TemplateBinding AnimationLayerFill}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            IsVisible="{TemplateBinding IsActive}"/>
                    <Border Name="Avatar"
                            Background="{TemplateBinding Background}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            IsVisible="{TemplateBinding IsActive, Converter={x:Static BoolConverters.Not}}"/>
                </Panel>
            </ControlTemplate>
        </Setter>
        
        <Setter Property="MotionDuration" Value="{DynamicResource {x:Static atom:SkeletonTokenKey.LoadingMotionDuration}}"/>
        <Setter Property="LoadingBackgroundStart" Value="{DynamicResource {x:Static atom:SkeletonTokenKey.LoadingBackgroundStart}}"/>
        <Setter Property="LoadingBackgroundMiddle" Value="{DynamicResource {x:Static atom:SkeletonTokenKey.LoadingBackgroundMiddle}}"/>
        <Setter Property="LoadingBackgroundEnd" Value="{DynamicResource {x:Static atom:SkeletonTokenKey.LoadingBackgroundEnd}}"/>
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="Background" Value="{DynamicResource {x:Static atom:SkeletonTokenKey.GradientFromColor}}" />
        
         <Style Selector="^[SizeType=Large]">
            <Setter Property="Width" Value="{DynamicResource {x:Static atom:SharedTokenKey.ControlHeightLG}}" />
            <Setter Property="Height" Value="{DynamicResource {x:Static atom:SharedTokenKey.ControlHeightLG}}" />
        </Style>

        <Style Selector="^[SizeType=Middle]">
            <Setter Property="Width" Value="{DynamicResource {x:Static atom:SharedTokenKey.ControlHeight}}" />
            <Setter Property="Height" Value="{DynamicResource {x:Static atom:SharedTokenKey.ControlHeight}}" />
        </Style>

        <Style Selector="^[SizeType=Small]">
            <Setter Property="Width" Value="{DynamicResource {x:Static atom:SharedTokenKey.ControlHeightSM}}" />
            <Setter Property="Height" Value="{DynamicResource {x:Static atom:SharedTokenKey.ControlHeightSM}}" />
        </Style>
        
        <Style Selector="^[Shape=Square]">
            <Style Selector="^[SizeType=Large]">
                <Setter Property="CornerRadius" Value="{DynamicResource {x:Static atom:SharedTokenKey.BorderRadiusLG}}" />
            </Style>

            <Style Selector="^[SizeType=Middle]">
                <Setter Property="CornerRadius" Value="{DynamicResource {x:Static atom:SharedTokenKey.BorderRadius}}" />
            </Style>

            <Style Selector="^[SizeType=Small]">
                <Setter Property="CornerRadius" Value="{DynamicResource {x:Static atom:SharedTokenKey.BorderRadiusSM}}" />
            </Style>
            
            <Style Selector="^[SizeType=Custom]">
                <Setter Property="CornerRadius" Value="{DynamicResource {x:Static atom:SharedTokenKey.BorderRadius}}" />
            </Style>
        </Style>
    </ControlTheme>
</ResourceDictionary>