<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atom="https://atomui.net"
    x:ClassModifier="internal">
    <ControlTheme x:Key="{x:Type atom:LoadingIndicatorAdorner}" TargetType="atom:LoadingIndicatorAdorner">
        <Setter Property="Template">
            <ControlTemplate>
                <Canvas Name="{x:Static atom:LoadingIndicatorAdornerThemeConstants.MainContainerPart}">
                    <atom:LoadingIndicator
                        Name="{x:Static atom:LoadingIndicatorAdornerThemeConstants.LoadingIndicatorPart}"/>
                </Canvas>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>