<ControlTheme  xmlns="https://github.com/avaloniaui"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:atom="https://atomui.net"
               x:Class="AtomUI.Controls.Themes.AbstractColorSliderTheme"
               TargetType="atom:AbstractColorSlider"
               x:ClassModifier="internal">
    <Style Selector="^:is(atom|AbstractColorSlider)">
      
        <Setter Property="Template">
            <ControlTemplate TargetType="{x:Type atom:ColorSlider}">
                <Border CornerRadius="{TemplateBinding CornerRadius}"
                        Margin="{TemplateBinding Padding}">
                    <Panel>
                        <Border HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Height="{Binding ElementName=PART_Track, Path=Bounds.Height}"
                                CornerRadius="{TemplateBinding CornerRadius}" 
                                Background="{TemplateBinding TransparentBgBrush}"
                                />
                        <Border HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Height="{Binding ElementName=PART_Track, Path=Bounds.Height}"
                                Background="{TemplateBinding Background}"
                                CornerRadius="{TemplateBinding CornerRadius}" 
                                BoxShadow="{DynamicResource {x:Static atom:ColorPickerTokenKey.ColorPickerInsetShadow}}"/>
                        <atom:ColorPickerSliderTrack Name="PART_Track"
                                                     Height="{DynamicResource {x:Static atom:ColorPickerTokenKey.ColorPickerSliderTrackSize}}"
                                                     HorizontalAlignment="Stretch"
                                                     VerticalAlignment="Center"
                                                     Minimum="{TemplateBinding Minimum}"
                                                     Maximum="{TemplateBinding Maximum}"
                                                     Value="{TemplateBinding Value, Mode=TwoWay}"
                                                     ClipToBounds="False">
                            <atom:ColorPickerSliderTrack.DecreaseButton>
                                <RepeatButton Name="PART_DecreaseButton"
                                              Background="Transparent"
                                              Focusable="False"
                                              HorizontalAlignment="Stretch"
                                              VerticalAlignment="Stretch">
                                    <RepeatButton.Template>
                                        <ControlTemplate>
                                            <Border Name="FocusTarget"
                                                    Background="Transparent"
                                                    Margin="0,-10" />
                                        </ControlTemplate>
                                    </RepeatButton.Template>
                                </RepeatButton>
                            </atom:ColorPickerSliderTrack.DecreaseButton>
                            <atom:ColorPickerSliderTrack.IncreaseButton>
                                <RepeatButton Name="PART_IncreaseButton"
                                              Background="Transparent"
                                              Focusable="False"
                                              HorizontalAlignment="Stretch"
                                              VerticalAlignment="Stretch">
                                    <RepeatButton.Template>
                                        <ControlTemplate>
                                            <Border Name="FocusTarget"
                                                    Background="Transparent"
                                                    Margin="0,-10" />
                                        </ControlTemplate>
                                    </RepeatButton.Template>
                                </RepeatButton>
                            </atom:ColorPickerSliderTrack.IncreaseButton>
                            <atom:ColorSliderThumb Name="ColorSliderThumb"
                                                   Margin="0"
                                                   Padding="0"
                                                   DataContext="{TemplateBinding Value}"
                                                   ColorValueBrush="{TemplateBinding HsvColor, Converter={x:Static atom:AbstractColorSliderTheme.HsvColorToBrushConverter}}"/>
                        </atom:ColorPickerSliderTrack>
                    </Panel>
                </Border>
            </ControlTemplate>
        </Setter>
        
        <Setter Property="TransparentBgIntervalColor" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorFillSecondary}}" />
        <Setter Property="TransparentBgSize" Value="{DynamicResource {x:Static atom:ColorPickerTokenKey.TransparentBgSize}}" />
        <Setter Property="ClipToBounds" Value="False" />
        <Setter Property="Height" Value="{DynamicResource {x:Static atom:ColorPickerTokenKey.ColorPickerSliderSize}}" />
        
    </Style>

</ControlTheme>