<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atom="https://atomui.net"
    x:ClassModifier="internal">
    <ControlTheme x:Key="{x:Type atom:OverlayDialogHeader}" TargetType="atom:OverlayDialogHeader">
        <Setter Property="Template">
            <ControlTemplate>
                <Border Name="HeaderFrame" Padding="{TemplateBinding Padding}"
                        Background="{TemplateBinding Background}">
                    <DockPanel LastChildFill="True">
                        <atom:IconPresenter Name="IconPresenter" DockPanel.Dock="Left"
                                            Icon="{TemplateBinding Logo}"/>
                        <StackPanel Orientation="Horizontal" Name="ButtonGroup" DockPanel.Dock="Right">
                            <atom:DialogCaptionButton
                                Name="{x:Static atom:OverlayDialogHeaderThemeConstants.MaximizeButtonPart}"
                                NormalIcon="{atom:IconProvider Kind=WindowMaximizedOutlined}"
                                CheckedIcon="{atom:IconProvider Kind=WindowRestoreOutlined}"
                                IsMotionEnabled="{TemplateBinding IsMotionEnabled}"
                                IsChecked="{TemplateBinding IsDialogMaximized}"
                                IsVisible="{TemplateBinding IsCloseButtonEnabled}">
                            </atom:DialogCaptionButton>
                            <atom:DialogCaptionButton
                                Name="{x:Static atom:OverlayDialogHeaderThemeConstants.CloseButtonPart}"
                                NormalIcon="{atom:IconProvider Kind=CloseOutlined}"
                                IsMotionEnabled="{TemplateBinding IsMotionEnabled}"
                                IsVisible="{TemplateBinding IsCloseButtonEnabled}" />
                        </StackPanel>
                        <TextBlock Name="Title" Text="{TemplateBinding Title}"
                                   FontSize="{TemplateBinding TitleFontSize}"
                                   FontWeight="{TemplateBinding TitleFontWeight}"/>
                    </DockPanel>
                </Border>
            </ControlTemplate>
        </Setter>
        
        <Setter Property="Padding" Value="{DynamicResource {x:Static atom:DialogTokenKey.HeaderPadding}}" />
        <Setter Property="Background" Value="{DynamicResource {x:Static atom:DialogTokenKey.HeaderBg}}" />
        <Style Selector="^ /template/ atom|IconPresenter#IconPresenter">
            <Setter Property="IconWidth" Value="{DynamicResource {x:Static atom:DialogTokenKey.LogoSize}}" />
            <Setter Property="IconHeight" Value="{DynamicResource {x:Static atom:DialogTokenKey.LogoSize}}" />
        </Style>
        
        <Style Selector="^ /template/ atom|DialogCaptionButton">
            <Setter Property="Width" Value="{DynamicResource {x:Static atom:DialogTokenKey.CloseBtnSize}}"/>
            <Setter Property="Height" Value="{DynamicResource {x:Static atom:DialogTokenKey.CloseBtnSize}}"/>
            <Setter Property="IconWidth" Value="{DynamicResource {x:Static atom:SharedTokenKey.IconSize}}"/>
            <Setter Property="IconHeight" Value="{DynamicResource {x:Static atom:SharedTokenKey.IconSize}}"/>
        </Style>
        
        <Style Selector="^ /template/ TextBlock#Title">
            <Setter Property="Foreground" Value="{DynamicResource {x:Static atom:DialogTokenKey.HeaderColor}}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
    </ControlTheme>
</ResourceDictionary>