<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atom="https://atomui.net"
    x:ClassModifier="internal">
    <ControlTheme x:Key="{x:Type atom:Dialog}" TargetType="atom:Dialog">
        <Setter Property="IsMotionEnabled" Value="{DynamicResource {x:Static atom:SharedTokenKey.EnableMotion}}" />
        <Setter Property="MinHeight" Value="{DynamicResource {x:Static atom:DialogTokenKey.MinHeight}}" />
        <Setter Property="MinWidth" Value="{DynamicResource {x:Static atom:DialogTokenKey.MinWidth}}" />
        
        <Style Selector="^[IsModal=True]">
            <Setter Property="IsMinimizable" Value="False" />
        </Style>
    </ControlTheme>
</ResourceDictionary>