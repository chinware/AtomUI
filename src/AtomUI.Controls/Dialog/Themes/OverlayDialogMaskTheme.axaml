<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atom="https://atomui.net"
    x:ClassModifier="internal">
    <ControlTheme x:Key="{x:Type atom:OverlayDialogMask}" TargetType="atom:OverlayDialogMask">
        <Setter Property="Template">
            <ControlTemplate>
                <Border Name="Frame" Background="{TemplateBinding Background}"/>
            </ControlTemplate>
        </Setter>
        
        <Setter Property="Opacity" Value="0"/>
        <Setter Property="Background" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorBgMask}}"/>
        <Setter Property="AnimationDuration" Value="{DynamicResource {x:Static atom:SharedTokenKey.MotionDurationMid}}"/>
        
    </ControlTheme>
</ResourceDictionary>