<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atom="https://atomui.net">
    <ControlTheme x:Key="{x:Type atom:WindowMessageManager}" TargetType="atom:WindowMessageManager">
        <Setter Property="Template">
            <ControlTemplate>
                <ReversibleStackPanel Name="{x:Static atom:WindowMessageManagerThemeConstants.ItemsPart}" />
            </ControlTemplate>
        </Setter>

        <Style Selector="^:topcenter">
            <Style Selector="^ /template/ ReversibleStackPanel#PART_Items">
                <Setter Property="ReverseOrder" Value="True"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Top"/>
            </Style>
        </Style>
    </ControlTheme>
</ResourceDictionary>