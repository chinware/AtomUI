<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atom="https://atomui.net">
    <atom:BoolToThicknessConverter x:Key="BoolToThicknessConverter" />
    <!--
       x:key表示，如果遇到atom:Breadcrumb，那就是我
       TargetType="atom:Breadcrumb"表示本axaml中的所有属性均来自于atom:Breadcrumb class
    -->
    <ControlTheme x:Key="{x:Type atom:Breadcrumb}" TargetType="atom:Breadcrumb">
        <!--
        把外部 ViewModel 里的集合 Breadcrumbs 绑进来。（在 Theme 里写死绑定是一种偷懒写法；实际可以删掉，让外部自己绑。）
        <Setter Property="ItemsSource" Value="{TemplateBinding ItemsSource}" />，直接写在下面就会报错
        -->
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <!-- 是BreadcrumbTokenKey，而不是BreadcrumbToken -->
        <Setter Property="Foreground" Value="{DynamicResource {x:Static atom:BreadcrumbTokenKey.ItemColor}}" />
        <Setter Property="IconFontSize" Value="{DynamicResource {x:Static atom:BreadcrumbTokenKey.IconFontSize}}" />
        <!--
            把控件的外表完全换成下面这段 XAML，开始模板替换
        -->
        <Setter Property="Template">
            <ControlTemplate>
                <Border Name="FramePart"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        Padding="{TemplateBinding Padding}"
                        ClipToBounds="True"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                    <ItemsPresenter Name="ItemsPresenterPart">
                        <ItemsPresenter.ItemsPanel>
                            <ItemsPanelTemplate>
                                <atom:BreadcrumbStackPanel IsExpanding="{Binding IsExpanding, RelativeSource={RelativeSource AncestorType=atom:Breadcrumb}}"/>
                            </ItemsPanelTemplate>
                        </ItemsPresenter.ItemsPanel>
                    </ItemsPresenter>
                </Border>
            </ControlTemplate>
        </Setter>
        
        <!-- 👉 悬停时的样式，全部为ControlTheme的直接子元素，无嵌套 -->
        <!--
        <Style Selector="^:pointerover">
            <Style Selector="^ /template/ Border#PART_ItemContainer">
                <Setter Property="Background" Value="Red" />
            </Style>
        </Style>
        -->
        
    </ControlTheme>
</ResourceDictionary>