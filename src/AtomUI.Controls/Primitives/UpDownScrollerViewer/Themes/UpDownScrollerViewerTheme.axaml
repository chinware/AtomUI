<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atom="https://atomui.net"
    x:ClassModifier="internal">
    <ControlTheme x:Key="{x:Type atom:UpDownScrollerViewer}" TargetType="atom:UpDownScrollerViewer">
        <Setter Property="Template">
            <ControlTemplate>
                <Panel>
                    <Border Background="{TemplateBinding Background}"/>
                    <ScrollContentPresenter Name="ContentPresenter"
                                            Margin="{TemplateBinding Padding}"
                                            HorizontalSnapPointsAlignment="{TemplateBinding HorizontalSnapPointsAlignment}"
                                            HorizontalSnapPointsType="{TemplateBinding HorizontalSnapPointsType}"
                                            VerticalSnapPointsAlignment="{TemplateBinding VerticalSnapPointsAlignment}"
                                            VerticalSnapPointsType="{TemplateBinding VerticalSnapPointsType}"
                                            IsScrollChainingEnabled="{TemplateBinding IsScrollChainingEnabled}">
                        <ScrollContentPresenter.GestureRecognizers>
                            <ScrollGestureRecognizer
                                CanHorizontallyScroll="{Binding CanHorizontallyScroll, ElementName=ContentPresenter}"
                                CanVerticallyScroll="{Binding CanVerticallyScroll, ElementName=ContentPresenter}"
                                IsScrollInertiaEnabled="{Binding IsScrollInertiaEnabled, RelativeSource={RelativeSource AncestorType=atom:UpDownScrollerViewer}}" />
                        </ScrollContentPresenter.GestureRecognizers>
                    </ScrollContentPresenter>
                    <atom:IconButton
                        Name="ScrollUpButton"
                        IsVisible="{TemplateBinding ScrollUpButtonVisible}"
                        Opacity="{TemplateBinding ScrollUpButtonOpacity}"
                        Icon="{atom:IconProvider UpOutlined}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        IsEnableHoverEffect="True"
                        IsMotionEnabled="{TemplateBinding IsMotionEnabled}"
                        Command="{Binding LineUp, RelativeSource={RelativeSource TemplatedParent}}" />
                    <atom:IconButton
                        Name="ScrollDownButton"
                        Icon="{atom:IconProvider DownOutlined}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        IsEnableHoverEffect="True"
                        IsVisible="{TemplateBinding ScrollDownButtonVisible}"
                        Opacity="{TemplateBinding ScrollDownButtonOpacity}"
                        IsMotionEnabled="{TemplateBinding IsMotionEnabled}"
                        Command="{Binding LineDown, RelativeSource={RelativeSource TemplatedParent}}" />
                </Panel>
            </ControlTemplate>
        </Setter>
        
        <Setter Property="Background" Value="Transparent" />
        <Style Selector="^ /template/ atom|IconButton">
            <Setter Property="Background" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorBgTextHover}}" />
            <Setter Property="Padding" Value="{DynamicResource {x:Static atom:UpDownScrollerViewerTokenKey.ScrollButtonPadding}}" />
            <Setter Property="Margin" Value="{DynamicResource {x:Static atom:UpDownScrollerViewerTokenKey.ScrollButtonMargin}}" />
            <Setter Property="IconWidth" Value="{DynamicResource {x:Static atom:UpDownScrollerViewerTokenKey.ScrollButtonIconSize}}" />
            <Setter Property="IconHeight" Value="{DynamicResource {x:Static atom:UpDownScrollerViewerTokenKey.ScrollButtonIconSize}}" />
        </Style>

    </ControlTheme>
</ResourceDictionary>