<ControlTheme xmlns="https://github.com/avaloniaui"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:atom="https://atomui.net"
              x:Class="AtomUI.Controls.Themes.SimpleAddOnDecoratedBoxTheme"
              TargetType="atom:SimpleAddOnDecoratedBox"
              x:ClassModifier="internal">
    <Setter Property="Template">
        <ControlTemplate TargetType="atom:SimpleAddOnDecoratedBox">
            <DockPanel Name="RootLayout" LastChildFill="True">
                <ContentPresenter
                    Name="{x:Static atom:AddOnDecoratedBoxThemeConstants.LeftAddOnPart}"
                    VerticalAlignment="Stretch"
                    VerticalContentAlignment="Center"
                    Focusable="False"
                    DockPanel.Dock="Left"
                    Content="{TemplateBinding LeftAddOn}"
                    ContentTemplate="{TemplateBinding LeftAddOnTemplate}"
                    BorderThickness="{TemplateBinding LeftAddOnBorderThickness}"
                    CornerRadius="{TemplateBinding LeftAddOnCornerRadius}"
                    IsVisible="{TemplateBinding LeftAddOn, Converter={x:Static ObjectConverters.IsNotNull}}" />
                <ContentPresenter
                    Name="{x:Static atom:AddOnDecoratedBoxThemeConstants.RightAddOnPart}"
                    VerticalAlignment="Stretch"
                    VerticalContentAlignment="Center"
                    DockPanel.Dock="Right"
                    Focusable="False"
                    Content="{TemplateBinding RightAddOn}"
                    ContentTemplate="{TemplateBinding RightAddOnTemplate}"
                    BorderThickness="{TemplateBinding RightAddOnBorderThickness}"
                    CornerRadius="{TemplateBinding RightAddOnCornerRadius}"
                    IsVisible="{TemplateBinding RightAddOn, Converter={x:Static ObjectConverters.IsNotNull}}" />

                <Border Name="{x:Static atom:AddOnDecoratedBoxThemeConstants.ContentFramePart}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding InnerBoxCornerRadius}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        Background="{TemplateBinding Background}">
                    <DockPanel Name="ContentLayout" LastChildFill="True">
                        <ContentPresenter
                            Name="{x:Static atom:AddOnDecoratedBoxThemeConstants.ContentLeftAddOnPart}"
                            DockPanel.Dock="Left"
                            VerticalAlignment="Stretch"
                            VerticalContentAlignment="Center"
                            HorizontalAlignment="Left"
                            Focusable="False"
                            Content="{TemplateBinding ContentLeftAddOn}"
                            ContentTemplate="{TemplateBinding ContentLeftAddOnTemplate}"
                            IsVisible="{TemplateBinding ContentLeftAddOn, Converter={x:Static ObjectConverters.IsNotNull}}"/>

                        <ContentPresenter
                            DockPanel.Dock="Right"
                            Name="{x:Static atom:AddOnDecoratedBoxThemeConstants.ContentRightAddOnPart}"
                            VerticalAlignment="Stretch"
                            VerticalContentAlignment="Center"
                            HorizontalAlignment="Right"
                            Focusable="False"
                            Content="{TemplateBinding ContentRightAddOn}"
                            ContentTemplate="{TemplateBinding ContentRightAddOnTemplate}" 
                            IsVisible="{TemplateBinding ContentRightAddOn, Converter={x:Static ObjectConverters.IsNotNull}}"/>

                        <ContentPresenter
                            Name="{x:Static atom:AddOnDecoratedBoxThemeConstants.ContentPresenterPart}"
                            Content="{TemplateBinding Content}"
                            ContentTemplate="{TemplateBinding ContentTemplate}" />
                    </DockPanel>
                </Border>
            </DockPanel>
        </ControlTemplate>
    </Setter>

    <Style Selector="^:is(atom|SimpleAddOnDecoratedBox)">
        <Setter Property="IsMotionEnabled" Value="{DynamicResource {x:Static atom:SharedTokenKey.EnableMotion}}" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="ScrollViewer.IsScrollChainingEnabled" Value="True" />
        <Setter Property="Foreground" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorText}}" />

        <Style Selector="^ /template/ ContentPresenter#PART_LeftAddOn">
            <Setter Property="Background" Value="{DynamicResource {x:Static atom:AddOnDecoratedBoxTokenKey.AddonBg}}" />
            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorBorder}}" />
        </Style>

        <Style Selector="^ /template/ ContentPresenter#PART_RightAddOn">
            <Setter Property="Background" Value="{DynamicResource {x:Static atom:AddOnDecoratedBoxTokenKey.AddonBg}}" />
            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorBorder}}" />
        </Style>
        
        <Style
            Selector="^ /template/ DockPanel#ContentLayout">
            <Setter Property="HorizontalSpacing"
                    Value="{DynamicResource {x:Static atom:SharedTokenKey.SpacingXS}}" />
        </Style>

        <Style Selector="^[SizeType=Large]">
            <Style
                Selector="^ /template/ ContentPresenter#PART_LeftAddOn">
                <Setter Property="Padding"
                        Value="{DynamicResource {x:Static atom:AddOnDecoratedBoxTokenKey.PaddingLG}}" />
            </Style>
            <Style
                Selector="^ /template/ ContentPresenter#PART_RightAddOn">
                <Setter Property="Padding"
                        Value="{DynamicResource {x:Static atom:AddOnDecoratedBoxTokenKey.PaddingLG}}" />
            </Style>
            <Setter Property="CornerRadius" Value="{DynamicResource {x:Static atom:SharedTokenKey.BorderRadiusLG}}" />
        </Style>
        <Style Selector="^[SizeType=Middle]">
            <Style
                Selector="^ /template/ ContentPresenter#PART_LeftAddOn">
                <Setter Property="Padding" Value="{DynamicResource {x:Static atom:AddOnDecoratedBoxTokenKey.Padding}}" />
            </Style>
            <Style
                Selector="^ /template/ ContentPresenter#PART_RightAddOn">
                <Setter Property="Padding" Value="{DynamicResource {x:Static atom:AddOnDecoratedBoxTokenKey.Padding}}" />
            </Style>
            <Setter Property="CornerRadius" Value="{DynamicResource {x:Static atom:SharedTokenKey.BorderRadius}}" />
        </Style>
        <Style Selector="^[SizeType=Small]">
            <Style
                Selector="^ /template/ ContentPresenter#PART_LeftAddOn">
                <Setter Property="Padding"
                        Value="{DynamicResource {x:Static atom:AddOnDecoratedBoxTokenKey.PaddingSM}}" />
            </Style>
            <Style
                Selector="^ /template/ ContentPresenter#PART_RightAddOn">
                <Setter Property="Padding"
                        Value="{DynamicResource {x:Static atom:AddOnDecoratedBoxTokenKey.PaddingSM}}" />
            </Style>
            <Setter Property="CornerRadius" Value="{DynamicResource {x:Static atom:SharedTokenKey.BorderRadiusSM}}" />
        </Style>

        <Style Selector="^[SizeType=Large]">
            <Style Selector="^ /template/ Border#PART_ContentFrame">
                <Setter Property="Padding"
                        Value="{DynamicResource {x:Static atom:AddOnDecoratedBoxTokenKey.PaddingLG}}" />
            </Style>
            <Style Selector="^ /template/ ContentPresenter#PART_ContentPresenter">
                <Setter Property="LineHeight" Value="{DynamicResource {x:Static atom:SharedTokenKey.FontHeightLG}}" />
                <Setter Property="MinHeight" Value="{DynamicResource {x:Static atom:SharedTokenKey.FontHeightLG}}" />
                <Setter Property="MinWidth" Value="{DynamicResource {x:Static atom:SharedTokenKey.FontHeightLG}}" />
            </Style>
        </Style>
        <Style Selector="^[SizeType=Middle]">
            <Style Selector="^ /template/ Border#PART_ContentFrame">
                <Setter Property="Padding"
                        Value="{DynamicResource {x:Static atom:AddOnDecoratedBoxTokenKey.Padding}}" />
            </Style>
            <Style Selector="^ /template/ ContentPresenter#PART_ContentPresenter">
                <Setter Property="LineHeight" Value="{DynamicResource {x:Static atom:SharedTokenKey.FontHeight}}" />
                <Setter Property="MinHeight" Value="{DynamicResource {x:Static atom:SharedTokenKey.FontHeight}}" />
                <Setter Property="MinWidth" Value="{DynamicResource {x:Static atom:SharedTokenKey.FontHeight}}" />
            </Style>
        </Style>
        <Style Selector="^[SizeType=Small]">
            <Style Selector="^ /template/ Border#PART_ContentFrame">
                <Setter Property="Padding"
                        Value="{DynamicResource {x:Static atom:AddOnDecoratedBoxTokenKey.PaddingSM}}" />
            </Style>
            <Style Selector="^ /template/ ContentPresenter#PART_ContentPresenter">
                <Setter Property="LineHeight" Value="{DynamicResource {x:Static atom:SharedTokenKey.FontHeightSM}}" />
                <Setter Property="MinHeight" Value="{DynamicResource {x:Static atom:SharedTokenKey.FontHeightSM}}" />
                <Setter Property="MinWidth" Value="{DynamicResource {x:Static atom:SharedTokenKey.FontHeightSM}}" />
            </Style>
        </Style>

        <Setter Property="BorderBrush" Value="Transparent" />
        <Style Selector="^[StyleVariant=Outline]">
            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorBorder}}" />
            <Setter Property="Background"
                    Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorTransparent}}" />

            <Style Selector="^[IsInnerBoxHover=True]">
                <Setter Property="BorderBrush"
                        Value="{DynamicResource {x:Static atom:AddOnDecoratedBoxTokenKey.HoverBorderColor}}" />
            </Style>

            <Style Selector="^:focus-within">
                <Setter Property="BorderBrush"
                        Value="{DynamicResource {x:Static atom:AddOnDecoratedBoxTokenKey.ActiveBorderColor}}" />
            </Style>

            <Style Selector="^:pressed">
                <Setter Property="BorderBrush"
                        Value="{DynamicResource {x:Static atom:AddOnDecoratedBoxTokenKey.ActiveBorderColor}}" />
            </Style>

            <Style Selector="^[Status=Error]">
                <Setter Property="BorderBrush"
                        Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorError}}" />

                <Style Selector="^[IsInnerBoxHover=True]">
                    <Setter Property="BorderBrush"
                            Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorErrorBorderHover}}" />
                </Style>

                <Style Selector="^:focus-within">
                    <Setter Property="BorderBrush"
                            Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorError}}" />
                </Style>

                <Style Selector="^:pressed">
                    <Setter Property="BorderBrush"
                            Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorError}}" />
                </Style>
            </Style>

            <Style Selector="^[Status=Warning]">
                <Setter Property="BorderBrush"
                        Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorWarning}}" />

                <Style Selector="^[IsInnerBoxHover=True]">
                    <Setter Property="BorderBrush"
                            Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorWarningBorderHover}}" />
                </Style>

                <Style Selector="^:focus-within">
                    <Setter Property="BorderBrush"
                            Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorWarning}}" />
                </Style>

                <Style Selector="^:pressed">
                    <Setter Property="BorderBrush"
                            Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorWarning}}" />
                </Style>
            </Style>
        </Style>

        <Style Selector="^[StyleVariant=Filled]">
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Background"
                    Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorFillTertiary}}" />

            <Style Selector="^[IsInnerBoxHover=True]">
                <Setter Property="Background"
                        Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorFillSecondary}}" />
            </Style>

            <Style Selector="^:focus-within">
                <Setter Property="BorderBrush"
                        Value="{DynamicResource {x:Static atom:AddOnDecoratedBoxTokenKey.ActiveBorderColor}}" />
                <Setter Property="Background" Value="Transparent" />
            </Style>

            <Style Selector="^:pressed">
                <Setter Property="BorderBrush"
                        Value="{DynamicResource {x:Static atom:AddOnDecoratedBoxTokenKey.ActiveBorderColor}}" />
            </Style>

            <Style Selector="^[Status=Error]">
                <Setter Property="BorderBrush"
                        Value="Transparent" />
                <Setter Property="Background"
                        Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorErrorBg}}" />

                <Style Selector="^[IsInnerBoxHover=True]">
                    <Setter Property="Background"
                            Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorErrorBgHover}}" />
                </Style>

                <Style Selector="^:focus-within">
                    <Setter Property="BorderBrush"
                            Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorError}}" />
                    <Setter Property="Background"
                            Value="{DynamicResource {x:Static atom:AddOnDecoratedBoxTokenKey.ActiveBg}}" />
                </Style>

                <Style Selector="^:pressed">
                    <Setter Property="BorderBrush"
                            Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorError}}" />
                </Style>
            </Style>

            <Style Selector="^[Status=Warning]">
                <Setter Property="BorderBrush" Value="Transparent" />
                <Setter Property="Background"
                        Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorWarningBg}}" />

                <Style Selector="^[IsInnerBoxHover=True]">
                    <Setter Property="Background"
                            Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorWarningBgHover}}" />
                </Style>

                <Style Selector="^:focus-within">
                    <Setter Property="BorderBrush"
                            Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorWarning}}" />
                    <Setter Property="Background"
                            Value="{DynamicResource {x:Static atom:AddOnDecoratedBoxTokenKey.ActiveBg}}" />
                </Style>

                <Style Selector="^:pressed">
                    <Setter Property="BorderBrush"
                            Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorError}}" />
                </Style>
            </Style>
        </Style>

        <Style Selector="^:disabled">
            <Style Selector="^[StyleVariant=Outline]">
                <Setter Property="Background"
                        Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorBgContainerDisabled}}" />
            </Style>
            
            <Style Selector="^[StyleVariant=Filled]">
                <Setter Property="Background"
                        Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorBgContainerDisabled}}" />
                <Setter Property="BorderBrush"
                        Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorBorder}}" />
            </Style>
            
            <Setter Property="Foreground"
                    Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorTextDisabled}}" />
        </Style>
    </Style>
</ControlTheme>