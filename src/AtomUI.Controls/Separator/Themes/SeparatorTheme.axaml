<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atom="https://atomui.net"
    x:ClassModifier="internal">
    <ControlTheme x:Key="{x:Type atom:Separator}" TargetType="atom:Separator">
        <Setter Property="Template">
            <ControlTemplate>
                <Label Name="{x:Static atom:SeparatorThemeConstants.TitlePart}"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       HorizontalContentAlignment="Center"
                       VerticalContentAlignment="Center"
                       Padding="0"
                       Content="{TemplateBinding Title}"
                       FontSize="{TemplateBinding FontSize}"
                       Foreground="{TemplateBinding TitleColor}"
                       IsVisible="{TemplateBinding Title, Converter={x:Static ObjectConverters.IsNotNull}}"/>
            </ControlTemplate>
        </Setter>
        
        <Setter Property="TitleColor" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorTextHeading}}" />
        <Setter Property="LineColor" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorBorderSecondary}}" />
        
        <Setter Property="TextPaddingInline" Value="{DynamicResource {x:Static atom:SeparatorTokenKey.TextPaddingInline}}" />
        <Setter Property="OrientationMarginPercent" Value="{DynamicResource {x:Static atom:SeparatorTokenKey.OrientationMarginPercent}}" />
        <Setter Property="LineWidth" Value="{DynamicResource {x:Static atom:SharedTokenKey.LineWidth}}" />
        
        <Style Selector="^[IsPlain=True]">
            <Style Selector="^ /template/ Label#PART_Title">
                <Setter Property="FontSize" Value="{DynamicResource {x:Static atom:SharedTokenKey.FontSize}}" />
                <Setter Property="FontWeight" Value="Normal" />
            </Style>
        </Style>
        <Style Selector="^[IsPlain=False]">
            <Style Selector="^ /template/ Label#PART_Title">
                <Setter Property="FontSize" Value="{DynamicResource {x:Static atom:SharedTokenKey.FontSizeLG}}" />
                <Setter Property="FontWeight" Value="500" />
            </Style>
        </Style>

        <Style Selector="^[Orientation=Horizontal]">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Style Selector="^ /template/ Label#PART_Title">
                <Setter Property="IsVisible" Value="True" />
            </Style>
            
            <Style Selector="^:not(:has-title)">
                <Style Selector="^[SizeType=Small]">
                    <Setter Property="Margin" Value="{DynamicResource {x:Static atom:SeparatorTokenKey.HorizontalMarginBlockSM}}"/>
                </Style>
            
                <Style Selector="^[SizeType=Middle]">
                    <Setter Property="Margin" Value="{DynamicResource {x:Static atom:SeparatorTokenKey.HorizontalMarginBlock}}"/>
                </Style>
            
                <Style Selector="^[SizeType=Large]">
                    <Setter Property="Margin" Value="{DynamicResource {x:Static atom:SeparatorTokenKey.HorizontalMarginBlockLG}}"/>
                </Style>
            </Style>
            <Style Selector="^:has-title">
                <Style Selector="^[SizeType=Small]">
                    <Setter Property="Margin" Value="{DynamicResource {x:Static atom:SeparatorTokenKey.HorizontalWithTextGutterMargin}}"/>
                </Style>
            </Style>
  
        </Style>
        
        <Style Selector="^[Orientation=Vertical]">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Style Selector="^ /template/ Label#PART_Title">
                <Setter Property="IsVisible" Value="False" />
            </Style>
            
            <Setter Property="VerticalMarginInline" Value="{DynamicResource {x:Static atom:SeparatorTokenKey.VerticalMarginInline}}"/>
        </Style>
        
    </ControlTheme>
</ResourceDictionary>