<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atom="https://atomui.net"
    x:ClassModifier="internal">
    <ControlTheme x:Key="{x:Type atom:Icon}" TargetType="atom:Icon">
        
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}"
                        Height="{TemplateBinding Height}"
                        Width="{TemplateBinding Width}"/>
            </ControlTemplate>
        </Setter>
        
        <Setter Property="IsMotionEnabled" Value="{DynamicResource {x:Static atom:SharedTokenKey.EnableMotion}}" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Height" Value="{DynamicResource {x:Static atom:SharedTokenKey.IconSize}}" />
        <Setter Property="Width" Value="{DynamicResource {x:Static atom:SharedTokenKey.IconSize}}" />
        <Setter Property="FillBrush" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorIcon}}" />
        <Setter Property="StrokeBrush" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorIcon}}" />
        <Setter Property="StrokeWidth" Value="{DynamicResource {x:Static atom:IconTokenKey.StrokeWidth}}" />
        <Setter Property="StrokeLineCap" Value="{DynamicResource {x:Static atom:IconTokenKey.StrokeLineCap}}" />
        <Setter Property="StrokeLineJoin" Value="{DynamicResource {x:Static atom:IconTokenKey.StrokeLineJoin}}" />
        
        <Style Selector="^[IconTheme=TwoTone]">
            <Setter Property="StrokeBrush" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorPrimary}}" />
            <Setter Property="FillBrush" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorInfoBg}}" />
        </Style>
        
        <Setter Property="SecondaryFillBrush" Value="{DynamicResource {x:Static atom:IconTokenKey.SecondaryFillColor}}" />
        <Setter Property="SecondaryStrokeBrush" Value="{DynamicResource {x:Static atom:IconTokenKey.SecondaryStrokeColor}}" />
        <Setter Property="FillAnimationDuration" Value="{DynamicResource {x:Static atom:SharedTokenKey.MotionDurationMid}}" />
        
    </ControlTheme>
</ResourceDictionary>