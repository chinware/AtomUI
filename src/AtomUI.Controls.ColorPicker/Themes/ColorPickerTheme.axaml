<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atom="https://atomui.net"
    xmlns:themes="using:AtomUI.Controls.Themes"
    x:ClassModifier="internal">
    <ControlTheme x:Key="{x:Type atom:ColorPicker}" TargetType="atom:ColorPicker">
        <ControlTheme.BasedOn>
            <themes:AbstractColorPickerTheme TargetType="atom:ColorPicker" />
        </ControlTheme.BasedOn>

        <Setter Property="Template">
            <ControlTemplate>
                <Border Name="Frame"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        Padding="{TemplateBinding Padding}"
                        Background="{TemplateBinding Background}">
                    <StackPanel Orientation="Horizontal">
                        <atom:ColorBlock Name="{x:Static atom:ColorPickerThemeConstants.ColorIndicatorPart}"
                                         SizeType="{TemplateBinding SizeType}"
                                         Background="{TemplateBinding ColorBlockBackground}" />
                        <TextBlock Name="{x:Static atom:ColorPickerThemeConstants.ColorTextPart}"
                                   IsVisible="{TemplateBinding IsShowText}"
                                   Text="{TemplateBinding ColorText}"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </Border>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>