<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atom="https://atomui.net"
    xmlns:themes="using:AtomUI.Controls.Themes"
    x:ClassModifier="internal">
    <ControlTheme x:Key="{x:Type atom:GradientColorPickerView}" TargetType="atom:GradientColorPickerView">
        <ControlTheme.BasedOn>
            <themes:AbstractColorPickerViewTheme TargetType="atom:GradientColorPickerView" />
        </ControlTheme.BasedOn>
        <Style Selector="^ /template/ atom|GradientColorSlider#PART_GradientColorSlider">
            <Setter Property="IsVisible" Value="False"/>
        </Style>
      
    </ControlTheme>
</ResourceDictionary>