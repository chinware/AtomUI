<ControlTheme
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atom="https://atomui.net"
    xmlns:converters="clr-namespace:AtomUI.Controls.Converters"
    x:Class="AtomUI.Controls.Themes.AbstractColorPickerViewTheme"
    TargetType="atom:AbstractColorPickerView"
    x:ClassModifier="internal">
    <Setter Property="Template">
        <ControlTemplate TargetType="atom:AbstractColorPickerView">
            <Border Name="Frame"
                    Background="{TemplateBinding Background}"
                    CornerRadius="{TemplateBinding CornerRadius}"
                    Padding="{TemplateBinding Padding}"
                    Margin="{TemplateBinding Margin}"
                    MinWidth="{TemplateBinding MinWidth}"
                    MinHeight="{TemplateBinding MinHeight}">
                <StackPanel Name="{x:Static atom:ColorPickerViewThemeConstants.LayoutRootPart}"
                            Orientation="Horizontal" ClipToBounds="False">
                    <atom:ColorPickerPaletteGroup Name="PaletteGroup" />
                    <StackPanel Orientation="Vertical" ClipToBounds="False"
                                Spacing="{DynamicResource {x:Static atom:SharedTokenKey.SpacingXS}}">
                        <atom:ColorBlock Name="{x:Static atom:ColorPickerViewThemeConstants.ClearColorPart}"
                                         HorizontalAlignment="Right" 
                                         IsEmptyColorMode="True"
                                         IsVisible="{TemplateBinding IsClearEnabled}"/>
                        <atom:GradientColorSlider Name="{x:Static atom:ColorPickerViewThemeConstants.GradientColorSliderPart}"/>
                        <StackPanel Orientation="Vertical" Name="ColorPickerContainer" ClipToBounds="False">
                            <atom:ColorSpectrum
                                Name="ColorSpectrum"
                                Components="SaturationValue"
                                HsvColor="{TemplateBinding HsvValue, Mode=TwoWay}"
                                MaxHue="{TemplateBinding MaxHue}"
                                MaxSaturation="{TemplateBinding MaxSaturation}"
                                MaxValue="{TemplateBinding MaxValue}"
                                MinHue="{TemplateBinding MinHue}"
                                MinSaturation="{TemplateBinding MinSaturation}"
                                MinValue="{TemplateBinding MinValue}" />
                            <DockPanel LastChildFill="True" ClipToBounds="False">
                                <atom:ColorBlock Name="ColorPreview"
                                                 Background="{TemplateBinding HsvValue, Converter={x:Static converters:HsvColorToBrushConverter.Default}}"
                                                 DockPanel.Dock="Right"
                                                 Margin="0, 2, 0, 2" />
                                <Panel Name="SliderContainer" ClipToBounds="False">
                                    <atom:ColorSlider Name="ColorSpectrumThirdComponentSlider" DockPanel.Dock="Top"
                                                      ColorModel="Hsva"
                                                      VerticalAlignment="Top"
                                                      HsvColor="{TemplateBinding HsvValue, Mode=TwoWay}"
                                                      IsVisible="{TemplateBinding IsColorSpectrumSliderVisible}"
                                                      ThumbColorValueBrush="{TemplateBinding HsvValue, Converter={x:Static converters:HsvColorToBrushConverter.WithoutAlpha}}" />
                                    <atom:ColorSlider Name="ColorSpectrumAlphaSlider" DockPanel.Dock="Bottom"
                                                      ColorComponent="Alpha"
                                                      ColorModel="Hsva"
                                                      VerticalAlignment="Bottom"
                                                      HsvColor="{TemplateBinding HsvValue, Mode=TwoWay}"
                                                      IsVisible="{TemplateBinding IsAlphaEffectiveVisible}"
                                                      IsRoundingEnabled="True"
                                                      ThumbColorValueBrush="{TemplateBinding HsvValue, Converter={x:Static converters:HsvColorToBrushConverter.Default}}" />
                                </Panel>
                            </DockPanel>
                            <atom:ColorPickerInput ColorValue="{TemplateBinding HsvValue, Mode=TwoWay}"
                                                   Format="{TemplateBinding Format, Mode=TwoWay}"
                                                   IsFormatEnabled="{TemplateBinding IsFormatEnabled, Mode=TwoWay}"
                                                   IsAlphaVisible="{TemplateBinding IsAlphaEffectiveVisible}"
                                                   IsClearEnabled="{TemplateBinding IsClearEnabled}" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
        </ControlTemplate>
    </Setter>

    <Style Selector="^:is(atom|AbstractColorPickerView)">
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="Padding" Value="{DynamicResource {x:Static atom:SharedTokenKey.PaddingXS}}" />
        <Style Selector="^ /template/ atom|GradientColorSlider#PART_GradientColorSlider">
            <Setter Property="IsVisible" Value="False"/>
        </Style>
        <Style Selector="^ /template/ atom|ColorSpectrum#ColorSpectrum">
            <Setter Property="MinHeight"
                    Value="{DynamicResource {x:Static atom:ColorPickerTokenKey.ColorSpectrumHeight }}" />
            <Setter Property="MinWidth" Value="{DynamicResource {x:Static atom:ColorPickerTokenKey.ColorPickerWidth}}" />
        </Style>

        <Style Selector="^ /template/ atom|ColorBlock#ColorPreview">
            <Setter Property="Size"
                    Value="{DynamicResource {x:Static atom:ColorPickerTokenKey.ColorPickerPreviewSize}}" />
        </Style>

        <Style Selector="^ /template/ StackPanel#ColorPickerContainer">
            <Setter Property="Spacing" Value="{DynamicResource {x:Static atom:SharedTokenKey.SpacingSM}}" />
        </Style>

        <Style Selector="^ /template/ Panel#SliderContainer">
            <Setter Property="Margin"
                    Value="{DynamicResource {x:Static atom:ColorPickerTokenKey.SliderContainerMargin}}" />
        </Style>

        <Style Selector="^[IsAlphaEffectiveVisible=False]">
            <Style Selector="^ /template/ atom|ColorSlider#ColorSpectrumThirdComponentSlider">
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>
        </Style>
    </Style>
</ControlTheme>