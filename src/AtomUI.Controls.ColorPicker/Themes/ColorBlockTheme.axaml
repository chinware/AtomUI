<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atom="https://atomui.net"
    x:ClassModifier="internal">
    <ControlTheme x:Key="{x:Type atom:ColorBlock}" TargetType="atom:ColorBlock">
        <Setter Property="Template">
            <ControlTemplate>
                <Panel>
                    <Border Name="ColorPreviewFrame"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Background="{TemplateBinding TransparentBgBrush}"
                            BoxShadow="{DynamicResource {x:Static atom:ColorPickerTokenKey.ColorBlockInnerShadows}}"
                            IsVisible="{TemplateBinding IsEmptyColorMode, Converter={x:Static BoolConverters.Not}}">
                        <Border Name="ColorPreview"
                                Background="{TemplateBinding Background}"
                                CornerRadius="{TemplateBinding CornerRadius}"/>
                    </Border>
                    <Border Name="EmptyColorFrame" 
                            CornerRadius="{TemplateBinding CornerRadius}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            IsVisible="{TemplateBinding IsEmptyColorMode}"
                            Background="Transparent"/>
                </Panel>
                
            </ControlTemplate>
        </Setter>
        
        <Setter Property="TransparentBgIntervalColor" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorFillSecondary}}" />
        <Setter Property="TransparentBgSize" Value="{DynamicResource {x:Static atom:ColorPickerTokenKey.TransparentBgSize}}" />
        
        <Style Selector="^[IsEmptyColorMode=True]">
            <Setter Property="Cursor" Value="Hand" />
            <Style Selector="^ /template/ Border#EmptyColorFrame">
                <Setter Property="BorderBrush" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorFillSecondary}}" />
            </Style>
            
            <Style Selector="^:pointerover">
                <Style Selector="^ /template/ Border#EmptyColorFrame">
                    <Setter Property="BorderBrush" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorBorder}}" />
                </Style>
            </Style>
        </Style>
        
        <Style Selector="^[IsCustomSize=False]">
            <Style Selector="^[SizeType=Large]">
                <Setter Property="Width" Value="{DynamicResource {x:Static atom:SharedTokenKey.ControlHeight}}" />
                <Setter Property="Height" Value="{DynamicResource {x:Static atom:SharedTokenKey.ControlHeight}}" />
                <Setter Property="CornerRadius" Value="{DynamicResource {x:Static atom:SharedTokenKey.BorderRadius}}" />
            </Style>

            <Style Selector="^[SizeType=Middle]">
                <Setter Property="Width" Value="{DynamicResource {x:Static atom:SharedTokenKey.ControlHeightSM}}" />
                <Setter Property="Height" Value="{DynamicResource {x:Static atom:SharedTokenKey.ControlHeightSM}}" />
                <Setter Property="CornerRadius" Value="{DynamicResource {x:Static atom:SharedTokenKey.BorderRadiusSM}}" />
            </Style>

            <Style Selector="^[SizeType=Small]">
                <Setter Property="Width" Value="{DynamicResource {x:Static atom:SharedTokenKey.ControlHeightXS}}" />
                <Setter Property="Height" Value="{DynamicResource {x:Static atom:SharedTokenKey.ControlHeightXS}}" />
                <Setter Property="CornerRadius" Value="{DynamicResource {x:Static atom:SharedTokenKey.BorderRadiusXS}}" />
            </Style>
        </Style>
        
        <Style Selector="^[SizeType=Large]">
            <Setter Property="CornerRadius" Value="{DynamicResource {x:Static atom:SharedTokenKey.BorderRadius}}" />
        </Style>

        <Style Selector="^[SizeType=Middle]">
            <Setter Property="CornerRadius" Value="{DynamicResource {x:Static atom:SharedTokenKey.BorderRadiusSM}}" />
        </Style>

        <Style Selector="^[SizeType=Small]">
            <Setter Property="CornerRadius" Value="{DynamicResource {x:Static atom:SharedTokenKey.BorderRadiusXS}}" />
        </Style>
    </ControlTheme>
</ResourceDictionary>