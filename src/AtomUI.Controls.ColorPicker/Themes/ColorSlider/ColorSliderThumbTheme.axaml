<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atom="https://atomui.net"
    x:ClassModifier="internal">

    <ControlTheme x:Key="{x:Type atom:ColorSliderThumb}" TargetType="atom:ColorSliderThumb">
        <Setter Property="Template">
            <ControlTemplate>
                <Border Name="{x:Static atom:ColorSliderThumbThemeConstants.FramePart}"
                        Background="{DynamicResource {x:Static atom:SharedTokenKey.ColorBgElevated}}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Padding="2"
                        CornerRadius="{TemplateBinding CornerRadius}">
                    <Border Name="{x:Static atom:ColorSliderThumbThemeConstants.InnerEllipsePart}"
                            BorderBrush="{DynamicResource {x:Static atom:SharedTokenKey.ColorFillSecondary}}"
                            CornerRadius="{TemplateBinding InnerCornerRadius}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{TemplateBinding ColorValueBrush}">
                    </Border>
                </Border>
            </ControlTemplate>
        </Setter>

        <Setter Property="ClipToBounds" Value="False" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="UseLayoutRounding" Value="False" />
        <Setter Property="Focusable" Value="True" />
        <Setter Property="BorderBrush" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorFillSecondary}}" />
        
        <Setter Property="Width"
                Value="{DynamicResource {x:Static atom:ColorPickerTokenKey.ColorPickerSliderThumbSize}}" />
        <Setter Property="Height"
                Value="{DynamicResource {x:Static atom:ColorPickerTokenKey.ColorPickerSliderThumbSize}}" />
        
        <Style Selector="^:focus,^:active">
            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorPrimaryActive}}" />
        </Style>
    </ControlTheme>

</ResourceDictionary>