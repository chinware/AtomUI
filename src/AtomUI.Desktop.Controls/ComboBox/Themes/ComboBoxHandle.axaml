<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atom="https://atomui.net"
    xmlns:antdicons="https://atomui.net/icons/antdesign"
    x:ClassModifier="internal">
    <ControlTheme x:Key="{x:Type atom:ComboBoxHandle}" TargetType="atom:ComboBoxHandle">
        <Setter Property="Template">
            <ControlTemplate>
                <atom:IconButton
                    Name="{x:Static atom:ComboBoxHandleThemeConstants.OpenIndicatorButtonPart}"
                    IsMotionEnabled="{TemplateBinding IsMotionEnabled}"
                    IsEnabled="{TemplateBinding IsEnabled}"
                    Icon="{antdicons:AntDesignIconProvider DownOutlined}"
                    VerticalAlignment="Center"/>
            </ControlTemplate>
        </Setter>

        <Style Selector="^ /template/ atom|IconButton#PART_OpenIndicatorButton">
            <Setter Property="IconWidth" Value="{DynamicResource {x:Static atom:SharedTokenKey.IconSizeSM}}" />
            <Setter Property="IconHeight"
                    Value="{DynamicResource {x:Static atom:SharedTokenKey.IconSizeSM}}" />
        </Style>
        
        <Style Selector="^ /template/ atom|IconButton#PART_OpenIndicatorButton:pointerover">
            <Setter Property="IconBrush"
                    Value="{DynamicResource {x:Static atom:ButtonSpinnerTokenKey.HandleHoverColor}}" />
        </Style>
        <Style Selector="^ /template/ atom|IconButton#PART_OpenIndicatorButton:pressed">
            <Setter Property="IconBrush"
                    Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorPrimaryActive}}" />
        </Style>
    </ControlTheme>
</ResourceDictionary>