<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atom="https://atomui.net"
    xmlns:antdicons="https://atomui.net/icons/antdesign"
    x:ClassModifier="internal">
    <ControlTheme x:Key="{x:Type atom:SelectHandle}" TargetType="atom:SelectHandle">
        <Setter Property="Template">
            <ControlTemplate>
                <Panel>
                    <antdicons:DownOutlined Name="OpenIndicator"
                                            IsMotionEnabled="{TemplateBinding IsMotionEnabled}"
                                            IsVisible="True" />
                    <antdicons:LoadingOutlined Name="LoadingIndicator"
                                               LoadingAnimation="Spin"
                                               IsVisible="False" />
                    <antdicons:SearchOutlined Name="SearchIndicator"
                                              IsMotionEnabled="{TemplateBinding IsMotionEnabled}"
                                              IsVisible="False" />
                    <atom:InputClearIconButton
                        Name="{x:Static atom:SelectHandleThemeConstants.ClearButtonPart}"
                        IsMotionEnabled="{TemplateBinding IsMotionEnabled}"
                        IsVisible="False" />
                </Panel>
            </ControlTemplate>
        </Setter>

        <Style Selector="^ /template/ atom|Icon">
            <Setter Property="Foreground"
                    Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorTextQuaternary}}" />
            <Setter Property="Width" Value="{DynamicResource {x:Static atom:SharedTokenKey.IconSizeSM}}" />
            <Setter Property="Height" Value="{DynamicResource {x:Static atom:SharedTokenKey.IconSizeSM}}" />
        </Style>

        <Style Selector="^[IsLoading=True]">
            <Style Selector="^ /template/ atom|Icon#OpenIndicator">
                <Setter Property="IsVisible" Value="False" />
            </Style>
            <Style Selector="^ /template/ atom|Icon#LoadingIndicator">
                <Setter Property="IsVisible" Value="True" />
            </Style>
        </Style>

        <Style Selector="^[IsSearchEnabled=True][IsDropDownOpen=True]">
            <Style Selector="^ /template/ atom|Icon#OpenIndicator">
                <Setter Property="IsVisible" Value="False" />
            </Style>
            <Style Selector="^ /template/ atom|Icon#SearchIndicator">
                <Setter Property="IsVisible" Value="True" />
            </Style>
        </Style>

        <Style Selector="^[IsClearable=True]">
            <Style Selector="^[IsSelectionEmpty=False]">
                <Style Selector="^[IsInputHover=True]">
                    <Style Selector="^ /template/ atom|Icon#OpenIndicator">
                        <Setter Property="IsVisible" Value="False" />
                    </Style>
                    <Style Selector="^ /template/ atom|Icon#SearchIndicator">
                        <Setter Property="IsVisible" Value="False" />
                    </Style>
                    <Style Selector="^ /template/ atom|InputClearIconButton#PART_ClearButton">
                        <Setter Property="IsVisible" Value="True" />
                    </Style>
                </Style>
            </Style>
        </Style>

    </ControlTheme>
</ResourceDictionary>