<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atom="https://atomui.net"
    x:ClassModifier="internal">
    <ControlTheme x:Key="{x:Type atom:DialogCaptionButton}" TargetType="atom:DialogCaptionButton">
        <Setter Property="Template">
            <ControlTemplate>
                <Border Name="Frame"
                        Background="{TemplateBinding Background}"
                        Padding="{TemplateBinding Padding}"
                        CornerRadius="{TemplateBinding CornerRadius}">
                    <Panel>
                        <atom:IconPresenter
                            Name="NormalIconPresenter"
                            Icon="{TemplateBinding NormalIcon}"
                            Width="{TemplateBinding IconWidth}"
                            Height="{TemplateBinding IconHeight}"
                            IsVisible="{TemplateBinding IsChecked, Converter={x:Static BoolConverters.Not}}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            IsMotionEnabled="{TemplateBinding IsMotionEnabled}"/>
                        <atom:IconPresenter
                            Name="CheckedIconPresenter"
                            Icon="{TemplateBinding CheckedIcon}"
                            IsVisible="{TemplateBinding IsChecked}"
                            Width="{TemplateBinding IconWidth}"
                            Height="{TemplateBinding IconHeight}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" 
                            IsMotionEnabled="{TemplateBinding IsMotionEnabled}"/>
                    </Panel>
                </Border>
            </ControlTemplate>
        </Setter>
        
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="CornerRadius" Value="{DynamicResource {x:Static atom:SharedTokenKey.BorderRadiusSM}}" />
        
        <Style Selector="^ /template/ atom|IconPresenter">
            <Setter Property="Foreground" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorIcon}}" />
        </Style>
        
        <Style Selector="^:pointerover">
            <Setter Property="Background" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorBgTextHover}}" />
            <Style Selector="^ /template/ atom|IconPresenter">
                <Setter Property="Foreground" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorIconHover}}" />
            </Style>
        </Style>
        
        <Style Selector="^:pressed">
            <Setter Property="Background" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorBgTextActive}}" />
            <Style Selector="^ /template/ atom|IconPresenter">
                <Setter Property="Foreground" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorIconHover}}" />
            </Style>
        </Style>
    </ControlTheme>
</ResourceDictionary>