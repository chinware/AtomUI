<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:themes="using:AtomUI.Desktop.Controls.Themes"
                    xmlns:atom="https://atomui.net"
                    x:ClassModifier="internal">
    <ResourceDictionary.MergedDictionaries>
        <ResourceInclude Source="WindowResizerTheme.axaml" />
        <ResourceInclude Source="WindowBuddyLayer.axaml" />
    </ResourceDictionary.MergedDictionaries>
    <themes:WindowTheme x:Key="{x:Type atom:Window}" TargetType="atom:Window" />
</ResourceDictionary>