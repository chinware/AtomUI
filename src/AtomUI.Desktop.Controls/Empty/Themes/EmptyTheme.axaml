<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atom="https://atomui.net"
    xmlns:localization="using:AtomUI.Desktop.Controls.Localization"
    x:ClassModifier="internal">
    <ControlTheme x:Key="{x:Type atom:Empty}" TargetType="atom:Empty">
        <Setter Property="Template">
            <ControlTemplate>
                <StackPanel Orientation="Vertical">
                    <Svg Name="{x:Static atom:EmptyThemeConstants.SvgImagePart}"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Height="30"/>
                    <atom:TextBlock Name="Description"
                                    HorizontalAlignment="Center"
                                    TextWrapping="Wrap"
                                    Text="{TemplateBinding Description}"/>
                </StackPanel>
            </ControlTemplate>
        </Setter>
        
        <Setter Property="Description" Value="{DynamicResource {x:Static localization:CommonLangResourceKey.NoData}}"/>
        
        <Style Selector="^[SizeType=Large]">
            <Style Selector="^ /template/ Svg#PART_SvgImage">
                <Setter Property="Height" Value="{DynamicResource {x:Static atom:EmptyTokenKey.EmptyImgHeight}}"/>
            </Style>
        </Style>
        
        <Style Selector="^[SizeType=Middle]">
            <Style Selector="^ /template/ Svg#PART_SvgImage">
                <Setter Property="Height" Value="{DynamicResource {x:Static atom:EmptyTokenKey.EmptyImgHeightMD}}"/>
            </Style>
        </Style>
        
        <Style Selector="^[SizeType=Small]">
            <Style Selector="^ /template/ Svg#PART_SvgImage">
                <Setter Property="Height" Value="{DynamicResource {x:Static atom:EmptyTokenKey.EmptyImgHeightSM}}"/>
            </Style>
        </Style>
        
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="BorderColor" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorFill}}"/>
        <Setter Property="BorderColorSecondary" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorBorderSecondary}}"/>
        <Setter Property="ShadowColor" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorFillTertiary}}"/>
        <Setter Property="ContentColor" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorFillQuaternary}}"/>
        <Setter Property="BgColor" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorBgElevated}}"/>
        
        <Style Selector="^[SizeType=Large]">
            <Style Selector="^ /template/ atom|TextBlock#Description">
                <Setter Property="Margin" Value="{DynamicResource {x:Static atom:EmptyTokenKey.DescriptionMargin}}"/>
            </Style>
        </Style>
        
        <Style Selector="^[SizeType=Middle]">
            <Style Selector="^ /template/ atom|TextBlock#Description">
                <Setter Property="Margin" Value="{DynamicResource {x:Static atom:EmptyTokenKey.DescriptionMarginSM}}"/>
            </Style>
        </Style>
        
        <Style Selector="^[SizeType=Small]">
            <Style Selector="^ /template/ atom|TextBlock#Description">
                <Setter Property="Margin" Value="{DynamicResource {x:Static atom:EmptyTokenKey.DescriptionMarginSM}}"/>
            </Style>
        </Style>
        
        <Style Selector="^ /template/ atom|TextBlock#Description">
            <Setter Property="Foreground" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorTextDescription}}"/>
        </Style>
        
    </ControlTheme>
</ResourceDictionary>