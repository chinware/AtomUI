<ControlTheme
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atom="https://atomui.net"
    TargetType="atom:ListItem"
    x:Class="AtomUI.Desktop.Controls.Themes.ListItemTheme"
    x:ClassModifier="internal">
    <Setter Property="Template">
        <ControlTemplate TargetType="atom:ListItem">
            <Border Name="Frame"
                    Background="{TemplateBinding Background}"
                    CornerRadius="{TemplateBinding CornerRadius}"
                    Padding="{TemplateBinding Padding}">
                <Panel>
                    <ContentPresenter Name="ContentPresenter"
                                      Content="{TemplateBinding Content, Converter={x:Static atom:ListItemTheme.StringToTextBlockConverter}}"
                                      ContentTemplate="{TemplateBinding ContentTemplate}"
                                      HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}" />
                    <atom:IconPresenter
                        Name="SelectedIndicator"
                        Icon="{TemplateBinding SelectedIndicator}"
                        IsVisible="{TemplateBinding IsSelectedIndicatorVisible}"
                        HorizontalAlignment="Right" />
                </Panel>
            </Border>
        </ControlTemplate>
    </Setter>

    <Style Selector="^:is(atom|ListItem)">
        <Setter Property="Margin" Value="{DynamicResource {x:Static atom:ListTokenKey.ItemMargin}}" />
        <Setter Property="Foreground" Value="{DynamicResource {x:Static atom:ListTokenKey.ItemColor}}" />
        <Setter Property="Background" Value="{DynamicResource {x:Static atom:ListTokenKey.ItemBgColor}}" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="VerticalContentAlignment" Value="Center" />

        <Style Selector="^[DisabledItemHoverEffect=False]:pointerover">
            <Setter Property="Foreground" Value="{DynamicResource {x:Static atom:ListTokenKey.ItemHoverColor}}" />
            <Setter Property="Background" Value="{DynamicResource {x:Static atom:ListTokenKey.ItemHoverBgColor}}" />
        </Style>

        <Style Selector="^:selected">
            <Setter Property="Foreground" Value="{DynamicResource {x:Static atom:ListTokenKey.ItemSelectedColor}}" />
            <Setter Property="Background" Value="{DynamicResource {x:Static atom:ListTokenKey.ItemSelectedBgColor}}" />
        </Style>

        <Style Selector="^ /template/ atom|IconPresenter#SelectedIndicator">
            <Setter Property="Foreground" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorPrimary}}" />
            <Setter Property="Width" Value="{DynamicResource {x:Static atom:SharedTokenKey.IconSize}}" />
            <Setter Property="Height" Value="{DynamicResource {x:Static atom:SharedTokenKey.IconSize}}" />
        </Style>

        <Style Selector="^[SizeType=Large]">
            <Setter Property="CornerRadius" Value="{DynamicResource {x:Static atom:SharedTokenKey.BorderRadius}}" />
            <Setter Property="MinHeight" Value="{DynamicResource {x:Static atom:SharedTokenKey.ControlHeightLG}}" />
            <Setter Property="Padding" Value="{DynamicResource {x:Static atom:ListTokenKey.ItemPaddingLG}}" />
        </Style>

        <Style Selector="^[SizeType=Middle]">
            <Setter Property="CornerRadius" Value="{DynamicResource {x:Static atom:SharedTokenKey.BorderRadiusSM}}" />
            <Setter Property="MinHeight" Value="{DynamicResource {x:Static atom:SharedTokenKey.ControlHeight}}" />
            <Setter Property="Padding" Value="{DynamicResource {x:Static atom:ListTokenKey.ItemPadding}}" />
        </Style>

        <Style Selector="^[SizeType=Small]">
            <Setter Property="CornerRadius" Value="{DynamicResource {x:Static atom:SharedTokenKey.BorderRadiusXS}}" />
            <Setter Property="MinHeight" Value="{DynamicResource {x:Static atom:SharedTokenKey.ControlHeightSM}}" />
            <Setter Property="Padding" Value="{DynamicResource {x:Static atom:ListTokenKey.ItemPaddingSM}}" />
        </Style>

        <Style Selector="^:disabled">
            <Style Selector="^ /template/ ContentPresenter#ContentPresenter">
                <Setter Property="Foreground"
                        Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorTextDisabled}}" />
            </Style>
        </Style>
    </Style>

</ControlTheme>