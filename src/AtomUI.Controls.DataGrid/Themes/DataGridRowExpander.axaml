<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:ClassModifier="internal"
    xmlns:atom="https://atomui.net">
    <ControlTheme x:Key="{x:Type atom:DataGridRowExpander}" TargetType="atom:DataGridRowExpander">
        <Setter Property="Template">
            <ControlTemplate>
                <Border Name="Frame"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        Background="Transparent"
                        CornerRadius="{TemplateBinding CornerRadius}">
                    <Canvas VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <Rectangle Name="{x:Static atom:DataGridRowExpanderThemeConstants.HorizontalIndicatorPart}"
                                   Height="1"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Fill="{TemplateBinding IndicatorFill}"
                                   RenderTransform="{TemplateBinding HorizontalIndicatorRenderTransform}"/>
                        <Rectangle Name="{x:Static atom:DataGridRowExpanderThemeConstants.VerticalIndicatorPart}"
                                   Width="1"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Fill="{TemplateBinding IndicatorFill}"
                                   RenderTransform="{TemplateBinding VerticalIndicatorRenderTransform}"/>
                    </Canvas>
                </Border>
            </ControlTemplate>
        </Setter>
        
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Cursor" Value="Hand"/>
        
        <Setter Property="Width" Value="{DynamicResource {x:Static atom:SharedTokenKey.SizeMS}}"/>
        <Setter Property="Height" Value="{DynamicResource {x:Static atom:SharedTokenKey.SizeMS}}"/>
        <Setter Property="CornerRadius" Value="{DynamicResource {x:Static atom:SharedTokenKey.BorderRadiusSM}}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorBorder}}"/>
        
        <Setter Property="IndicatorFill" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorTextSecondary}}"/>
        
        <Style Selector="^:focus">
            <Setter Property="IndicatorFill" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorPrimaryHover}}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorPrimaryHover}}"/>
        </Style>
        
        <Style Selector="^:pointerover">
            <Setter Property="IndicatorFill" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorPrimaryHover}}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorPrimaryHover}}"/>
        </Style>
        
        <Style Selector="^:pressed">
            <Setter Property="IndicatorFill" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorPrimaryActive}}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static atom:SharedTokenKey.ColorPrimaryActive}}"/>
        </Style>
        
        <Style Selector="^ /template/ Rectangle#PART_VerticalIndicator">
            <Setter Property="Height" Value="9"/>
        </Style>
        
        <Style Selector="^ /template/ Rectangle#PART_HorizontalIndicator">
            <Setter Property="Width" Value="9"/>
        </Style>
        
        <Style Selector="^[IsChecked=True]">
            <Style Selector="^ /template/ Rectangle#PART_VerticalIndicator">
                <Setter Property="Opacity" Value="0"/>
            </Style>
            <Setter Property="VerticalIndicatorRenderTransform" Value="rotate(90deg)"/>
            <Setter Property="HorizontalIndicatorRenderTransform" Value="rotate(180deg)"/>
        </Style>
        
    </ControlTheme>
</ResourceDictionary>