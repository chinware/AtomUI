<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atom="https://atomui.net">
    <ControlTheme x:Key="{x:Type atom:DataGridRowReorderHandle}" TargetType="atom:DataGridRowReorderHandle">
        <Setter Property="Template">
            <ControlTemplate>
                <atom:IconButton
                    Name = "IndicatorIconButton"
                    IsEnableHoverEffect="True"
                    Icon="{atom:IconProvider  HolderOutlined}"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    IsMotionEnabled="{TemplateBinding IsMotionEnabled}">
                </atom:IconButton>
            </ControlTemplate>
        </Setter>
        
        <Style Selector="^ /template/ atom|IconButton#IndicatorIconButton">
            <Setter Property="Width" Value="{DynamicResource {x:Static atom:DataGridTokenKey.RowReorderIndicatorSize}}"/>
            <Setter Property="Height" Value="{DynamicResource {x:Static atom:DataGridTokenKey.RowReorderIndicatorSize}}"/>
            <Setter Property="IconWidth" Value="{DynamicResource {x:Static atom:SharedTokenKey.IconSize}}"/>
            <Setter Property="IconHeight" Value="{DynamicResource {x:Static atom:SharedTokenKey.IconSize}}"/>
        </Style>
    </ControlTheme>
</ResourceDictionary>