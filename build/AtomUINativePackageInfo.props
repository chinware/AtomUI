<Project>
    <PropertyGroup>
        <AtomUINativeArtifactName Condition="$([MSBuild]::IsOSPlatform('Linux'))">libAtomUINative.so</AtomUINativeArtifactName>
        <AtomUINativeArtifactName Condition="$([MSBuild]::IsOSPlatform('OSX'))">libAtomUINative.dylib</AtomUINativeArtifactName>
        <AtomUINativeArtifactName Condition="$([MSBuild]::IsOSPlatform('Windows'))">AtomUINative.dll</AtomUINativeArtifactName>
        <AtomUINativeRuntimeType Condition="$([MSBuild]::IsOSPlatform('Linux'))">linux</AtomUINativeRuntimeType>
        <AtomUINativeRuntimeType Condition="$([MSBuild]::IsOSPlatform('OSX'))">osx</AtomUINativeRuntimeType>
        <AtomUINativeRuntimeType Condition="$([MSBuild]::IsOSPlatform('Windows'))">win</AtomUINativeRuntimeType>
        <CPUArchitecture>$([System.Runtime.InteropServices.RuntimeInformation]::ProcessArchitecture)</CPUArchitecture>
        <CPUArchitecture>$(CPUArchitecture.ToLower)</CPUArchitecture>
        <AtomUIRuntimeDir>$(AtomUINativeRuntimeType)-$(CPUArchitecture)</AtomUIRuntimeDir>
        <AtomUINativeDeployPath>runtimes/$(AtomUIRuntimeDir)/native</AtomUINativeDeployPath>
    </PropertyGroup>
</Project>