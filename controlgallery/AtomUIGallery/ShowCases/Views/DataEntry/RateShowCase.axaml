<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AtomUIGallery.ShowCases.Views.RateShowCase"
             xmlns:atom="https://atomui.net"
             xmlns:antdicons="https://atomui.net/icons/antdesign"
             xmlns:gallery="https://atomui.net/oss-controls/gallery">
    <gallery:ShowCasePanel>
        <gallery:ShowCaseItem
            Title="Basic"
            Description="The simplest usage.">
            <atom:Rate/>
        </gallery:ShowCaseItem>
        
        <gallery:ShowCaseItem
            Title="Half star"
            Description="Support select half star.">
            <atom:Rate DefaultValue="3.5" IsAllowHalf="True"/>
        </gallery:ShowCaseItem>
        
        <gallery:ShowCaseItem
            Title="Show copywriting"
            Description="Add copywriting in rate components.">
            <StackPanel Orientation="Vertical" Spacing="10">
                <atom:Rate Name="ToolTipRate" ToolTips="{Binding Tooltips}"
                           ValueChanged="HandleValueChanged"/>
                <TextBlock Text="{Binding ActiveTooltip}"/>
            </StackPanel>
        </gallery:ShowCaseItem>
        
        <gallery:ShowCaseItem
            Title="Read only"
            Description="Read only, can't use mouse to interact.">
            <atom:Rate DefaultValue="2" IsEnabled="False"/>
        </gallery:ShowCaseItem>
        
        <gallery:ShowCaseItem
            Title="Other Character"
            Description="Replace the default star to other character like alphabet, digit, iconfont or even Chinese word.">
            <StackPanel Orientation="Vertical" Spacing="10">
                <atom:Rate IsAllowHalf="True" IsAllowClear="True" Character="{antdicons:AntDesignIconProvider HeartOutlined}"/>
                <atom:Rate IsAllowHalf="True" IsAllowClear="True" Character="A"/>
                <atom:Rate IsAllowHalf="True" IsAllowClear="True" Character="ç§¦"/>
            </StackPanel>
        </gallery:ShowCaseItem>
    </gallery:ShowCasePanel>
</UserControl>