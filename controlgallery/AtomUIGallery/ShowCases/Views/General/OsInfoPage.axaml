<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AtomUIGallery.ShowCases.Views.OsInfoPage"
             xmlns:atom="https://atomui.net"
             xmlns:viewModels="clr-namespace:AtomUIGallery.ShowCases.ViewModels"
             x:DataType="viewModels:OsInfoViewModel">
    <StackPanel Orientation="Vertical" Spacing="20">
        <Svg
            Name="OsLogo"
            Path="{Binding LogoPath}"
            HorizontalAlignment="Left"
            Margin="100 0 0 40" />

        <atom:DataGrid Name="OsInfoTable" Margin="10" ItemsSource="{Binding SystemInfoRecords}" SizeType="Small">
            <atom:DataGrid.Columns>
                <atom:DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                <atom:DataGridTextColumn Header="Value" Binding="{Binding Value}"/>
            </atom:DataGrid.Columns>
        </atom:DataGrid>
    </StackPanel>
</UserControl>