                        <atom:DataGridTextColumn CanUserReorder="True" Header="Column3" Binding="{Binding Address}" />
                        <atom:DataGridTextColumn CanUserReorder="True" Header="Column4" Binding="{Binding Address}" />
                        <atom:DataGridTextColumn CanUserReorder="True" Header="Column5" Binding="{Binding Address}" />
                        <atom:DataGridTextColumn CanUserReorder="True" Header="Column6" Binding="{Binding Address}" />
                        <atom:DataGridTextColumn CanUserReorder="True" Header="Column7" Binding="{Binding Address}" />
                        <atom:DataGridTextColumn CanUserReorder="True" Header="Column8" Binding="{Binding Address}" />
                        <atom:DataGridTextColumn CanUserReorder="True" Header="Column9" Binding="{Binding Address}" />
                    </atom:DataGrid.Columns>
                </atom:DataGrid>
            </StackPanel>
        </gallerycontrols:ShowCaseItem>
        
        <gallerycontrols:ShowCaseItem Title="Drag sorting with handler"
                                      Description="You can drag the row indicator column to sort the rows."
                                      IsOccupyEntireRow="True">
            <StackPanel Orientation="Vertical" Spacing="10">
                <atom:Separator Title="Normal" TitlePosition="Left"
                                FontWeight="Bold" />
                <atom:DataGrid x:Name="DragRowDataGrid1"
                               CanUserReorderRows="True">
                    <atom:DataGrid.Columns>
                        <atom:DataGridRowReorderColumn />
                        <atom:DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                        <atom:DataGridTextColumn Header="Address" Binding="{Binding Name}" />
                        <atom:DataGridTextColumn Header="Age" Binding="{Binding Address}" />
                    </atom:DataGrid.Columns>
                </atom:DataGrid>
        
                <atom:Separator Title="Normal" TitlePosition="Left"
                                FontWeight="Bold"
                                Margin="0, 20, 0, 0" />
                <atom:DataGrid x:Name="DragRowDataGrid2"
                               CanUserReorderRows="True"
                               Height="400">
                    <atom:DataGrid.Columns>
                        <atom:DataGridRowReorderColumn />
                        <atom:DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                        <atom:DataGridTextColumn Header="Address" Binding="{Binding Name}" />
                        <atom:DataGridTextColumn Header="Age" Binding="{Binding Address}" />
                    </atom:DataGrid.Columns>
                </atom:DataGrid>
            </StackPanel>
        </gallerycontrols:ShowCaseItem>
        
        <gallerycontrols:ShowCaseItem Title="Custom empty and loading"
                                      Description="Custom empty status and loading."
                                      IsOccupyEntireRow="True">
            <StackPanel Spacing="10">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <atom:Button ButtonType="Primary" Click="HandleToggleEmptyGridItemsSource">Toggle Data</atom:Button>
                    <atom:Button ButtonType="Primary" Click="HandleToggleLoadingState">Toggle Loading</atom:Button>
                </StackPanel>
                <atom:DataGrid x:Name="CustomEmptyDataGrid"
                               CanUserReorderRows="True">
                    <atom:DataGrid.Columns>
                        <atom:DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                        <atom:DataGridTextColumn Header="Age" Binding="{Binding Address}" />
                        <atom:DataGridTextColumn Header="Address" Binding="{Binding Name}" />
                    </atom:DataGrid.Columns>
                </atom:DataGrid>
            </StackPanel>
        </gallerycontrols:ShowCaseItem>
        
        <gallerycontrols:ShowCaseItem Title="Editable Cells"
                                      Description="Table with editable cells."
                                      IsOccupyEntireRow="True">
            <StackPanel Spacing="10">
                <atom:Button ButtonType="Primary" Click="HandleAddARowToCellsEditableGrid">Add a row</atom:Button>
                <atom:DataGrid x:Name="EditableCellsDataGrid">
                    <atom:DataGrid.Columns>
                        <atom:DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                        <atom:DataGridNumericColumn Header="Age" Binding="{Binding Age}" FormatString="0" />
                        <atom:DataGridTextColumn Header="Address" Binding="{Binding Address}" />
                        <atom:DataGridTemplateColumn Header="Action">
                            <atom:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="15">
                                        <atom:PopupConfirm
                                            Title="Sure to delete?"
                                            Confirmed="HandleRemoveRowCellsEditableGrid"
                                            DataContext="{Binding Index, RelativeSource={RelativeSource AncestorType=atom:DataGridRow}}">
                                            <atom:HyperLinkTextBlock Text="Delete" />
                                        </atom:PopupConfirm>
                                    </StackPanel>
                                </DataTemplate>
                            </atom:DataGridTemplateColumn.CellTemplate>
                        </atom:DataGridTemplateColumn>
                    </atom:DataGrid.Columns>
                </atom:DataGrid>
            </StackPanel>
        </gallerycontrols:ShowCaseItem>
        
        <gallerycontrols:ShowCaseItem Title="Basic Paging" Description="Basic pagination table." IsOccupyEntireRow="True">
            <StackPanel Spacing="20">
                <StackPanel Spacing="10">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <atom:TextBlock Width="180" VerticalAlignment="Center">PaginationVisibility:</atom:TextBlock>
                        <atom:CheckBox Name="ShowTopPaginationCheckBox">Top Pagination</atom:CheckBox>
                        <atom:CheckBox Name="ShowBottomPaginationCheckBox" IsChecked="True">Bottom Pagination</atom:CheckBox>
                    </StackPanel>
        
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <atom:TextBlock Width="180" VerticalAlignment="Center">Top Pagination Align:</atom:TextBlock>
                        <atom:OptionButtonGroup ButtonStyle="Solid" Name="TopPaginationOptionGroup">
                            <atom:OptionButton>Start</atom:OptionButton>
                            <atom:OptionButton>Center</atom:OptionButton>
                            <atom:OptionButton IsChecked="True">End</atom:OptionButton>
                        </atom:OptionButtonGroup>
                    </StackPanel>
        
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <atom:TextBlock Width="180" VerticalAlignment="Center">Bottom Pagination Align:</atom:TextBlock>
                        <atom:OptionButtonGroup ButtonStyle="Solid" Name="BottomPaginationOptionGroup">
                            <atom:OptionButton>Start</atom:OptionButton>
                            <atom:OptionButton>Center</atom:OptionButton>
                            <atom:OptionButton IsChecked="True">End</atom:OptionButton>
                        </atom:OptionButtonGroup>
                    </StackPanel>
        
                </StackPanel>
                <atom:DataGrid x:Name="BasicPagingCaseGrid" Height="400" PaginationVisibility="Bottom"
                               PageSize="10">
                    <atom:DataGrid.Columns>
                        <atom:DataGridTemplateColumn Header="Name">
                            <atom:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <atom:HyperLinkTextBlock Text="{Binding Name}" />
                                </DataTemplate>
                            </atom:DataGridTemplateColumn.CellTemplate>
                        </atom:DataGridTemplateColumn>
                        <atom:DataGridTextColumn Header="Age" Binding="{Binding Age}" />
                        <atom:DataGridTextColumn Header="Address" Binding="{Binding Address}" />
                        <atom:DataGridTemplateColumn Header="Tags">
                            <atom:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ItemsControl ItemsSource="{Binding Tags}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal" Spacing="5" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <atom:Tag TagText="{Binding Name}" TagColor="{Binding Color}"></atom:Tag>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </DataTemplate>
                            </atom:DataGridTemplateColumn.CellTemplate>
                        </atom:DataGridTemplateColumn>
                        <atom:DataGridTemplateColumn Header="Action">
                            <atom:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="15">
                                        <atom:HyperLinkTextBlock Text="Invite" />
                                        <atom:HyperLinkTextBlock Text="Modify" />
                                        <atom:HyperLinkTextBlock Text="Delete" />
                                    </StackPanel>
                                </DataTemplate>
                            </atom:DataGridTemplateColumn.CellTemplate>
                        </atom:DataGridTemplateColumn>
                    </atom:DataGrid.Columns>
                </atom:DataGrid>
            </StackPanel>
        </gallerycontrols:ShowCaseItem>

    </gallerycontrols:ShowCasePanel>
</UserControl>