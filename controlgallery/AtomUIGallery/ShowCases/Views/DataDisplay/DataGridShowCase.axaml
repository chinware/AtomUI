<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AtomUIGallery.ShowCases.Views.DataGridShowCase"
             xmlns:atom="https://atomui.net"
             xmlns:gallerycontrols="clr-namespace:AtomUIGallery.Controls">
    <gallerycontrols:ShowCasePanel>
        <gallerycontrols:ShowCaseItem Title="Basic" Description="Simple table with actions." IsOccupyEntireRow="True">
            <atom:DataGrid x:Name="BasicCaseGrid"
                           IsHideOnSinglePage="True">
                <atom:DataGrid.Columns>
                    <atom:DataGridTemplateColumn Header="Name">
                        <atom:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <atom:HyperLinkTextBlock Text="{Binding Name}" />
                            </DataTemplate>
                        </atom:DataGridTemplateColumn.CellTemplate>
                    </atom:DataGridTemplateColumn>
                    <atom:DataGridTextColumn Header="Age" Binding="{Binding Age}" CanUserResize="True"/>
                    <atom:DataGridTextColumn Header="Address" Binding="{Binding Address}" />
                    <atom:DataGridTemplateColumn Header="Tags">
                        <atom:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ItemsControl ItemsSource="{Binding Tags}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" Spacing="5" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <atom:Tag TagText="{Binding Name}" TagColor="{Binding Color}"></atom:Tag>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </DataTemplate>
                        </atom:DataGridTemplateColumn.CellTemplate>
                    </atom:DataGridTemplateColumn>
                    <atom:DataGridTemplateColumn Header="Action">
                        <atom:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="15">
                                    <atom:HyperLinkTextBlock Text="Invite" />
                                    <atom:HyperLinkTextBlock Text="Modify" />
                                    <atom:HyperLinkTextBlock Text="Delete" />
                                </StackPanel>
                            </DataTemplate>
                        </atom:DataGridTemplateColumn.CellTemplate>
                    </atom:DataGridTemplateColumn>
                </atom:DataGrid.Columns>
            </atom:DataGrid>
        </gallerycontrols:ShowCaseItem>
        
        <gallerycontrols:ShowCaseItem Title="Selection"
                                      Description="Rows can be selectable by making first column as a selectable column. You can use rowSelection.type to set selection type. Default is checkbox."
                                      IsOccupyEntireRow="True">
            <StackPanel Orientation="Vertical" Spacing="10">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <atom:RadioButton x:Name="ExtendedSelection" IsChecked="True">Extended</atom:RadioButton>
                    <atom:RadioButton x:Name="SingleSelection">Single</atom:RadioButton>
                </StackPanel>
                <atom:DataGrid x:Name="SelectionDataGrid" SelectionMode="Extended" SelectTriggerType="Cell">
                    <atom:DataGrid.Columns>
                        <atom:DataGridSelectionColumn />
                        <atom:DataGridTemplateColumn Header="Name">
                            <atom:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <atom:HyperLinkTextBlock Text="{Binding Name}" />
                                </DataTemplate>
                            </atom:DataGridTemplateColumn.CellTemplate>
                        </atom:DataGridTemplateColumn>
                        <atom:DataGridTextColumn Header="Age" Binding="{Binding Age}" />
                        <atom:DataGridTextColumn Header="Address" Binding="{Binding Address}" />
                        <atom:DataGridTemplateColumn Header="Tags">
                            <atom:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ItemsControl ItemsSource="{Binding Tags}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal" Spacing="5" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <atom:Tag TagText="{Binding Name}" TagColor="{Binding Color}"></atom:Tag>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </DataTemplate>
                            </atom:DataGridTemplateColumn.CellTemplate>
                        </atom:DataGridTemplateColumn>
                        <atom:DataGridTemplateColumn Header="Action">
                            <atom:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="15">
                                        <atom:HyperLinkTextBlock Text="Invite" />
                                        <atom:HyperLinkTextBlock Text="Modify" />
                                        <atom:HyperLinkTextBlock Text="Delete" />
                                    </StackPanel>
                                </DataTemplate>
                            </atom:DataGridTemplateColumn.CellTemplate>
                        </atom:DataGridTemplateColumn>
                    </atom:DataGrid.Columns>
                </atom:DataGrid>
            </StackPanel>
        </gallerycontrols:ShowCaseItem>
        
        <gallerycontrols:ShowCaseItem Title="Filter and sorter"
                                      Description="Use filters to generate filter menu in columns, onFilter to determine filtered result, and filterMultiple to indicate whether it's multiple or single selection, filterOnClose to specify whether to trigger filter when the filter menu closes.Use defaultFilteredValue to make a column filtered by default."
                                      IsOccupyEntireRow="True">
            <atom:DataGrid x:Name="FilterAndSortGrid" CanUserFilterColumns="True">
                <atom:DataGrid.Columns>
                    <atom:DataGridTemplateColumn Header="Name"
                                                 CanUserSort="True"
                                                 SupportedSortDirections="Descending"
                                                 SortMemberPath="Name"
                                                 FilterMemberPath="Name">
                        <atom:DataGridTemplateColumn.Filters>
                            <atom:DataGridFilterItem Text="Joe" Value="Joe" />
                            <atom:DataGridFilterItem Text="Jim" Value="Jim" />
                            <atom:DataGridFilterItem Text="Submenu" Value="Submenu">
                                <atom:DataGridFilterItem Text="Green" Value="Green" />
                                <atom:DataGridFilterItem Text="Black" Value="Black" />
                            </atom:DataGridFilterItem>
                        </atom:DataGridTemplateColumn.Filters>
                        <atom:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <atom:HyperLinkTextBlock Text="{Binding Name}" />
                            </DataTemplate>
                        </atom:DataGridTemplateColumn.CellTemplate>
                    </atom:DataGridTemplateColumn>
                    <atom:DataGridTextColumn Header="Age" Binding="{Binding Age}"
                                             SupportedSortDirections="All"
                                             CanUserSort="True">
                    </atom:DataGridTextColumn>
                    <atom:DataGridTextColumn Header="Address"
                                             Binding="{Binding Address}"
        
                                             CanUserSort="True"
                                             FilterMultiple="True"
                                             SupportedSortDirections="Ascending">
                        <atom:DataGridTextColumn.Filters>
                            <atom:DataGridFilterItem Text="London" Value="London" />
                            <atom:DataGridFilterItem Text="New York" Value="New York" />
                        </atom:DataGridTextColumn.Filters>
                    </atom:DataGridTextColumn>
                </atom:DataGrid.Columns>
            </atom:DataGrid>
        </gallerycontrols:ShowCaseItem>
        
        <gallerycontrols:ShowCaseItem Title="Drag resize column"
                                      Description="You can drag to change the size of the column"
                                      IsOccupyEntireRow="True">
            <atom:DataGrid x:Name="DragResizeColumn" IsHideOnSinglePage="True" CanUserResizeColumns="True">
                <atom:DataGrid.Columns>
                    <atom:DataGridTemplateColumn Header="Name" CanUserResize="True">
                        <atom:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <atom:HyperLinkTextBlock Text="{Binding Name}" />
                            </DataTemplate>
                        </atom:DataGridTemplateColumn.CellTemplate>
                    </atom:DataGridTemplateColumn>
                    <atom:DataGridTextColumn Header="Age" Binding="{Binding Age}" CanUserResize="True" CanUserSort="True"/>
                    <atom:DataGridTextColumn Header="Address" Binding="{Binding Address}" />
                    <atom:DataGridTemplateColumn Header="Tags">
                        <atom:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ItemsControl ItemsSource="{Binding Tags}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" Spacing="5" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <atom:Tag TagText="{Binding Name}" TagColor="{Binding Color}"></atom:Tag>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </DataTemplate>
                        </atom:DataGridTemplateColumn.CellTemplate>
                    </atom:DataGridTemplateColumn>
                    <atom:DataGridTemplateColumn Header="Action">
                        <atom:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="15">
                                    <atom:HyperLinkTextBlock Text="Invite" />
                                    <atom:HyperLinkTextBlock Text="Modify" />
                                    <atom:HyperLinkTextBlock Text="Delete" />
                                </StackPanel>
                            </DataTemplate>
                        </atom:DataGridTemplateColumn.CellTemplate>
                    </atom:DataGridTemplateColumn>
                </atom:DataGrid.Columns>
            </atom:DataGrid>
        </gallerycontrols:ShowCaseItem>

        <gallerycontrols:ShowCaseItem Title="Filter in Tree"
                                      Description="You can use filterMode to change default filter interface, options: menu(default) and tree."
                                      IsOccupyEntireRow="True">
            <atom:DataGrid x:Name="FilterInTreeGrid" CanUserFilterColumns="True">
                <atom:DataGrid.Columns>
                    <atom:DataGridTemplateColumn Header="Name"
                                                 CanUserSort="True"
                                                 SupportedSortDirections="Descending"
                                                 SortMemberPath="Name"
                                                 FilterMode="Tree"
                                                 FilterMemberPath="Name">
                        <atom:DataGridTemplateColumn.Filters>
                            <atom:DataGridFilterItem Text="Joe" Value="Joe" />
                            <atom:DataGridFilterItem Text="Jim" Value="Jim" />
                            <atom:DataGridFilterItem Text="Submenu" Value="Submenu">
                                <atom:DataGridFilterItem Text="Green" Value="Green" />
                                <atom:DataGridFilterItem Text="Black" Value="Black" />
                            </atom:DataGridFilterItem>
                        </atom:DataGridTemplateColumn.Filters>
                        <atom:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <atom:HyperLinkTextBlock Text="{Binding Name}" />
                            </DataTemplate>
                        </atom:DataGridTemplateColumn.CellTemplate>
                    </atom:DataGridTemplateColumn>
                    <atom:DataGridTextColumn Header="Age" Binding="{Binding Age}"
        
                                             CanUserSort="True">
                    </atom:DataGridTextColumn>
                    <atom:DataGridTextColumn Header="Address"
                                             Binding="{Binding Address}"
        
                                             CanUserSort="True"
                                             FilterMultiple="True"
                                             SupportedSortDirections="Ascending">
                        <atom:DataGridTextColumn.Filters>
                            <atom:DataGridFilterItem Text="London" Value="London" />
                            <atom:DataGridFilterItem Text="New York" Value="New York" />
                        </atom:DataGridTextColumn.Filters>
                    </atom:DataGridTextColumn>
                </atom:DataGrid.Columns>
            </atom:DataGrid>
        </gallerycontrols:ShowCaseItem>
        
        <gallerycontrols:ShowCaseItem Title="Multiple sorter"
                                      Description="column.sorter support multiple to config the priority of sort columns. Though sorter.compare to customize compare function. You can also leave it empty to use the interactive only."
                                      IsOccupyEntireRow="True">
            <atom:DataGrid x:Name="MultiSorterDataGrid" CanUserFilterColumns="True">
                <atom:DataGrid.Columns>
                    <atom:DataGridTextColumn Header="Name"
                                             Binding="{Binding Name}"
        
                                             CanUserSort="True" />
                    <atom:DataGridTextColumn Header="Chinese Score"
                                             Binding="{Binding Chinese}"
        
                                             CanUserSort="True" />
                    <atom:DataGridTextColumn Header="Math Score"
                                             Binding="{Binding Math}"
        
                                             CanUserSort="True" />
                    <atom:DataGridTextColumn Header="English Score"
                                             Binding="{Binding English}"
        
                                             CanUserSort="True" />
                </atom:DataGrid.Columns>
            </atom:DataGrid>
        </gallerycontrols:ShowCaseItem>
        
        <gallerycontrols:ShowCaseItem Title="Reset filters and sorters"
                                      Description="Control filters and sorters by API."
                                      IsOccupyEntireRow="True">
            <StackPanel Spacing="10">
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <atom:Button ButtonType="Default" x:Name="SortAgeBtn">Sort age</atom:Button>
                    <atom:Button ButtonType="Default" x:Name="ClearFiltersBtn">Clear filters</atom:Button>
                    <atom:Button ButtonType="Default" x:Name="ClearFiltersAndSortersBtn">Clear filters and sorters</atom:Button>
                </StackPanel>
                <atom:DataGrid x:Name="ResetFilterAndSortGrid" CanUserFilterColumns="True">
                    <atom:DataGrid.Columns>
                        <atom:DataGridTextColumn Header="Name"
                                                 Binding="{Binding Name}"
                                                 CanUserSort="True"
                                                 FilterMultiple="True">
                            <atom:DataGridTextColumn.Filters>
                                <atom:DataGridFilterItem Text="Joe" Value="Joe" />
                                <atom:DataGridFilterItem Text="Jim" Value="Jim" />
                                <atom:DataGridFilterItem Text="Submenu" Value="Submenu">
                                    <atom:DataGridFilterItem Text="Green" Value="Green" />
                                    <atom:DataGridFilterItem Text="Black" Value="Black" />
                                </atom:DataGridFilterItem>
                            </atom:DataGridTextColumn.Filters>
                        </atom:DataGridTextColumn>
                        <atom:DataGridTextColumn Header="Age" Binding="{Binding Age}"
        
                                                 CanUserSort="True">
                        </atom:DataGridTextColumn>
                        <atom:DataGridTextColumn Header="Address"
                                                 Binding="{Binding Address}"
        
                                                 CanUserSort="True"
                                                 FilterMultiple="True">
                            <atom:DataGridTextColumn.Filters>
                                <atom:DataGridFilterItem Text="London" Value="London" />
                                <atom:DataGridFilterItem Text="New York" Value="New York" />
                            </atom:DataGridTextColumn.Filters>
                        </atom:DataGridTextColumn>
                    </atom:DataGrid.Columns>
                </atom:DataGrid>
            </StackPanel>
        </gallerycontrols:ShowCaseItem>
        
        <gallerycontrols:ShowCaseItem Title="Size"
                                      Description="There are two compacted table sizes: middle and small. The small size is used in Modals only."
                                      IsOccupyEntireRow="True">
            <StackPanel Spacing="10">
                <atom:DataGrid x:Name="LargeSizeDataGrid" SizeType="Large">
                    <atom:DataGrid.Columns>
                        <atom:DataGridTextColumn Header="Name"
                                                 Binding="{Binding Name}" />
                        <atom:DataGridTextColumn Header="Age" Binding="{Binding Age}" />
                        <atom:DataGridTextColumn Header="Address"
                                                 Binding="{Binding Address}" />
                    </atom:DataGrid.Columns>
                </atom:DataGrid>
        
                <atom:DataGrid x:Name="MiddleSizeDataGrid" SizeType="Middle">
                    <atom:DataGrid.Columns>
                        <atom:DataGridTextColumn Header="Name"
                                                 Binding="{Binding Name}" />
                        <atom:DataGridTextColumn Header="Age" Binding="{Binding Age}" />
                        <atom:DataGridTextColumn Header="Address"
                                                 Binding="{Binding Address}" />
                    </atom:DataGrid.Columns>
                </atom:DataGrid>
        
                <atom:DataGrid x:Name="SmallSizeDataGrid" SizeType="Small">
                    <atom:DataGrid.Columns>
                        <atom:DataGridTextColumn Header="Name"
                                                 Binding="{Binding Name}" />
                        <atom:DataGridTextColumn Header="Age" Binding="{Binding Age}" />
                        <atom:DataGridTextColumn Header="Address"
                                                 Binding="{Binding Address}" />
                    </atom:DataGrid.Columns>
                </atom:DataGrid>
            </StackPanel>
        </gallerycontrols:ShowCaseItem>
        
        <gallerycontrols:ShowCaseItem Title="border, title and footer"
                                      Description="Add border, title and footer for table." IsOccupyEntireRow="True">
            <atom:DataGrid x:Name="CustomHeaderAndFooterDataGrid"
                           GridLinesVisibility="All"
                           IsShowFrameBorder="True">
                <atom:DataGrid.Title>
                    Header
                </atom:DataGrid.Title>
                <atom:DataGrid.Footer>
                    Footer
                </atom:DataGrid.Footer>
                <atom:DataGrid.Columns>
                    <atom:DataGridTemplateColumn Header="Name">
                        <atom:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <atom:HyperLinkTextBlock Text="{Binding Name}" />
                            </DataTemplate>
                        </atom:DataGridTemplateColumn.CellTemplate>
                    </atom:DataGridTemplateColumn>
                    <atom:DataGridTextColumn Header="Cash Assets" Binding="{Binding Money}" />
                    <atom:DataGridTextColumn Header="Address" Binding="{Binding Address}" />
                </atom:DataGrid.Columns>
            </atom:DataGrid>
        </gallerycontrols:ShowCaseItem>
        
        <gallerycontrols:ShowCaseItem Title="Expandable Row"
                                      Description="When there's too much information to show and the table can't display all at once."
                                      IsOccupyEntireRow="True">
            <atom:DataGrid x:Name="ExpandableDataGrid"
                           RowDetailsVisibilityMode="Collapsed">
                <atom:DataGrid.Columns>
                    <atom:DataGridDetailExpanderColumn />
                    <atom:DataGridTemplateColumn Header="Name">
                        <atom:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <atom:HyperLinkTextBlock Text="{Binding Name}" />
                            </DataTemplate>
                        </atom:DataGridTemplateColumn.CellTemplate>
                    </atom:DataGridTemplateColumn>
                    <atom:DataGridTextColumn Header="Age" Binding="{Binding Age}" />
                    <atom:DataGridTextColumn Header="Address" Binding="{Binding Address}" />
                    <atom:DataGridTemplateColumn Header="Action">
                        <atom:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="15">
                                    <atom:HyperLinkTextBlock Text="Delete" />
                                </StackPanel>
                            </DataTemplate>
                        </atom:DataGridTemplateColumn.CellTemplate>
                    </atom:DataGridTemplateColumn>
                </atom:DataGrid.Columns>
        
                <atom:DataGrid.RowDetailsTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Description}" TextWrapping="Wrap" />
                    </DataTemplate>
                </atom:DataGrid.RowDetailsTemplate>
            </atom:DataGrid>
        </gallerycontrols:ShowCaseItem>
        
        <gallerycontrols:ShowCaseItem Title="Order Specific Column"
                                      Description="You can control the order of the expand and select columns."
                                      IsOccupyEntireRow="True">
            <atom:DataGrid x:Name="OrderSpecificColumnDataGrid"
                           RowDetailsVisibilityMode="Collapsed"
                           SelectionMode="Extended">
                <atom:DataGrid.Columns>
                    <atom:DataGridTemplateColumn Header="Name">
                        <atom:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <atom:HyperLinkTextBlock Text="{Binding Name}" />
                            </DataTemplate>
                        </atom:DataGridTemplateColumn.CellTemplate>
                    </atom:DataGridTemplateColumn>
                    <atom:DataGridDetailExpanderColumn />
                    <atom:DataGridTextColumn Header="Age" Binding="{Binding Age}" />
                    <atom:DataGridSelectionColumn />
                    <atom:DataGridTextColumn Header="Address" Binding="{Binding Address}" />
                    <atom:DataGridTemplateColumn Header="Action">
                        <atom:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="15">
                                    <atom:HyperLinkTextBlock Text="Delete" />
                                </StackPanel>
                            </DataTemplate>
                        </atom:DataGridTemplateColumn.CellTemplate>
                    </atom:DataGridTemplateColumn>
                </atom:DataGrid.Columns>
        
                <atom:DataGrid.RowDetailsTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Description}" TextWrapping="Wrap" />
                    </DataTemplate>
                </atom:DataGrid.RowDetailsTemplate>
            </atom:DataGrid>
        </gallerycontrols:ShowCaseItem>
        
        <gallerycontrols:ShowCaseItem Title="Row Header"
                                      Description="You can control whether to display the Column header and RowHeader"
                                      IsOccupyEntireRow="True">
            <atom:DataGrid x:Name="RowAndColumnHeaderDataGrid"
                           HeadersVisibility="All">
                <atom:DataGrid.RowHeaderContentTemplate>
                    <DataTemplate>
                        <atom:TextBlock Text="{Binding $parent[atom:DataGridRow].LogicIndex}" />
                    </DataTemplate>
                </atom:DataGrid.RowHeaderContentTemplate>
                <atom:DataGrid.Columns>
                    <atom:DataGridTemplateColumn Header="Name">
                        <atom:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <atom:HyperLinkTextBlock Text="{Binding Name}" />
                            </DataTemplate>
                        </atom:DataGridTemplateColumn.CellTemplate>
                    </atom:DataGridTemplateColumn>
                    <atom:DataGridTextColumn Header="Age" Binding="{Binding Age}" />
                    <atom:DataGridTextColumn Header="Address" Binding="{Binding Address}" />
                    <atom:DataGridTemplateColumn Header="Action">
                        <atom:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="15">
                                    <atom:HyperLinkTextBlock Text="Delete" />
                                </StackPanel>
                            </DataTemplate>
                        </atom:DataGridTemplateColumn.CellTemplate>
                    </atom:DataGridTemplateColumn>
                </atom:DataGrid.Columns>
        
                <atom:DataGrid.RowDetailsTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Description}" TextWrapping="Wrap" />
                    </DataTemplate>
                </atom:DataGrid.RowDetailsTemplate>
            </atom:DataGrid>
        </gallerycontrols:ShowCaseItem>
        
        <gallerycontrols:ShowCaseItem Title="Grouping table head"
                                      Description="Group table head with columns[n].children." IsOccupyEntireRow="true">
            <StackPanel>
                <atom:DataGrid Name="GroupHeaderDataGrid" LeftFrozenColumnCount="2"
                               RightFrozenColumnCount="2"
                               CanUserResizeColumns="True">
                    <atom:DataGrid.ColumnGroups>
                        <atom:DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                        <atom:DataGridColumnGroupItem Header="Other">
                            <atom:DataGridTextColumn Header="Age" Binding="{Binding Age}" />
                            <atom:DataGridColumnGroupItem Header="Address">
                                <atom:DataGridTextColumn Header="Street" Binding="{Binding Street}" />
                                <atom:DataGridColumnGroupItem Header="Block">
                                    <atom:DataGridTextColumn Header="Building" Binding="{Binding Building}" />
                                    <atom:DataGridTextColumn Header="Door No." Binding="{Binding Number}" />
                                </atom:DataGridColumnGroupItem>
                            </atom:DataGridColumnGroupItem>
                        </atom:DataGridColumnGroupItem>
                        <atom:DataGridColumnGroupItem Header="Company">
                            <atom:DataGridTextColumn Header="Company Address" Binding="{Binding CompanyAddress}" />
                            <atom:DataGridTextColumn Header="Company Name" Binding="{Binding CompanyName}" CanUserResize="False" />
                        </atom:DataGridColumnGroupItem>
                        <atom:DataGridTextColumn Header="Gender" Binding="{Binding Gender}" />
                    </atom:DataGrid.ColumnGroups>
                </atom:DataGrid>
            </StackPanel>
        </gallerycontrols:ShowCaseItem>
        
        <gallerycontrols:ShowCaseItem Title="Hidden Columns"
                                      Description="Hide columns with hidden."
                                      IsOccupyEntireRow="True">
            <StackPanel Spacing="10">
                <StackPanel Spacing="10" Orientation="Horizontal">
                    <atom:CheckBox Name="ColumnCheckBox1">Column 1</atom:CheckBox>
                    <atom:CheckBox Name="ColumnCheckBox2">Column 2</atom:CheckBox>
                    <atom:CheckBox Name="ColumnCheckBox3">Column 3</atom:CheckBox>
                    <atom:CheckBox Name="ColumnCheckBox4">Column 4</atom:CheckBox>
                    <atom:CheckBox Name="ColumnCheckBox5">Column 5</atom:CheckBox>
                    <atom:CheckBox Name="ColumnCheckBox6">Column 6</atom:CheckBox>
                </StackPanel>
                <atom:DataGrid x:Name="HideColumnDataGrid"
                               RowDetailsVisibilityMode="Collapsed">
                    <atom:DataGrid.Columns>
                        <atom:DataGridTextColumn Header="Column 1" Binding="{Binding Name}" />
                        <atom:DataGridTextColumn Header="Column 2" Binding="{Binding Address}" />
                        <atom:DataGridTextColumn Header="Column 3" Binding="{Binding Name}" />
                        <atom:DataGridTextColumn Header="Column 4" Binding="{Binding Address}" />
                        <atom:DataGridTextColumn Header="Column 5" Binding="{Binding Name}" />
                        <atom:DataGridTextColumn Header="Column 6" Binding="{Binding Address}" />
                    </atom:DataGrid.Columns>
                </atom:DataGrid>
            </StackPanel>
        </gallerycontrols:ShowCaseItem>
        
        <gallerycontrols:ShowCaseItem Title="Fixed Header"
                                      Description="Display large amounts of data in scrollable view."
                                      IsOccupyEntireRow="True">
            <atom:DataGrid x:Name="FixedHeaderDataGrid" Height="400">
                <atom:DataGrid.Columns>
                    <atom:DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                    <atom:DataGridTextColumn Header="Age" Binding="{Binding Address}" />
                    <atom:DataGridTextColumn Header="Address" Binding="{Binding Name}" />
                </atom:DataGrid.Columns>
            </atom:DataGrid>
        </gallerycontrols:ShowCaseItem>
        
        <gallerycontrols:ShowCaseItem Title="Fixed Columns"
                                      Description="When there are too many columns, we can make some columns fixed."
                                      IsOccupyEntireRow="True">
        
            <StackPanel Orientation="Vertical" Spacing="20">
                <atom:DataGrid x:Name="FixedColumnsDataGrid1"
                               LeftFrozenColumnCount="2"
                               RightFrozenColumnCount="2"
                               HeadersVisibility="All">
                    <atom:DataGrid.RowHeaderContentTemplate>
                        <DataTemplate>
                            <atom:TextBlock Text="{Binding $parent[atom:DataGridRow].LogicIndex}" />
                        </DataTemplate>
                    </atom:DataGrid.RowHeaderContentTemplate>
                    <atom:DataGrid.Columns>
                        <atom:DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                        <atom:DataGridTextColumn Header="Age" Binding="{Binding Age}" />
                        <atom:DataGridTextColumn Header="Column 1" Binding="{Binding Address}" />
                        <atom:DataGridTextColumn Header="Column 2" Binding="{Binding Address}" />
                        <atom:DataGridTextColumn Header="Column 3" Binding="{Binding Address}" />
                        <atom:DataGridTextColumn Header="Column 4" Binding="{Binding Address}" />
                        <atom:DataGridTextColumn Header="Column 5" Binding="{Binding Address}" />
                        <atom:DataGridTextColumn Header="Column 6" Binding="{Binding Address}" />
                        <atom:DataGridTextColumn Header="Column 7" Binding="{Binding Address}" />
                        <atom:DataGridTextColumn Header="Column 8" Binding="{Binding Address}" />
                        <atom:DataGridTextColumn Header="Column 9" Binding="{Binding Address}" />
                        <atom:DataGridTextColumn Header="Column 10" Binding="{Binding Address}" />
                        <atom:DataGridTextColumn Header="Column 11" Binding="{Binding Address}" />
                        <atom:DataGridTextColumn Header="Column 12" Binding="{Binding Address}" />
                        <atom:DataGridTextColumn Header="Column 13" Binding="{Binding Address}" />
                        <atom:DataGridTextColumn Header="Column 14" Binding="{Binding Address}" />
                        <atom:DataGridTextColumn Header="Column 15" Binding="{Binding Address}" />
                        <atom:DataGridTextColumn Header="Column 16" Binding="{Binding Address}" />
                        <atom:DataGridTextColumn Header="Column 17" Binding="{Binding Address}" />
                        <atom:DataGridTextColumn Header="Column 18" Binding="{Binding Address}" />
                        <atom:DataGridTextColumn Header="Column 19" Binding="{Binding Address}" />
                        <atom:DataGridTextColumn Header="Column 20" Binding="{Binding Address}" />
                        <atom:DataGridTemplateColumn Header="Action">
                            <atom:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="15">
                                        <atom:HyperLinkTextBlock Text="Modify" />
                                    </StackPanel>
                                </DataTemplate>
                            </atom:DataGridTemplateColumn.CellTemplate>
                        </atom:DataGridTemplateColumn>
                    </atom:DataGrid.Columns>
                </atom:DataGrid>
        
                <atom:DataGrid x:Name="FixedColumnsDataGrid2"
                               LeftFrozenColumnCount="2"
                               RightFrozenColumnCount="1"
                               HeadersVisibility="All">
                    <atom:DataGrid.RowHeaderContentTemplate>
                        <DataTemplate>
                            <atom:TextBlock Text="{Binding $parent[atom:DataGridRow].LogicIndex}" />
                        </DataTemplate>
                    </atom:DataGrid.RowHeaderContentTemplate>
                    <atom:DataGrid.Columns>
                        <atom:DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                        <atom:DataGridTextColumn Header="Age" Binding="{Binding Age}" />
                        <atom:DataGridTextColumn Header="Column 1" Binding="{Binding Address}" />
                        <atom:DataGridTextColumn Header="Column 2" Binding="{Binding Address}" />
                        <atom:DataGridTextColumn Header="Column 3" Binding="{Binding Address}" />
                        <atom:DataGridTextColumn Header="Column 4" Binding="{Binding Address}" />
