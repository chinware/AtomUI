<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:gallery="https://atomui.net/oss-controls/gallery"
    xmlns:atom="https://atomui.net"
    x:CompileBindings="True">

    <ControlTheme x:Key="{x:Type gallery:IconInfoItem}" TargetType="gallery:IconInfoItem">
        <Setter Property="Template">
            <ControlTemplate TargetType="gallery:IconInfoItem">
                <Border
                    Width="{TemplateBinding Width}"
                    Height="{TemplateBinding Height}"
                    Background="{TemplateBinding Background}">
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                        <atom:IconPresenter
                            HorizontalAlignment="Center"
                            Icon="{TemplateBinding Icon}"/>
                        <atom:TextBlock
                            Margin="0,20, 0, 0"
                            Padding="8"
                            FontSize="13"
                            HorizontalAlignment="Center"
                            Foreground="{TemplateBinding Foreground}"
                            Text="{TemplateBinding IconName}" />
                    </StackPanel>
                </Border>
            </ControlTemplate>
        </Setter>
        <Setter Property="Height" Value="150" />
        <Setter Property="Width" Value="150" />
        <Setter Property="Margin" Value="10" />
        
        <Style Selector="^ /template/ atom|IconPresenter">
            <Setter Property="Height" Value="48" />
            <Setter Property="Width" Value="48" />
        </Style>
    </ControlTheme>
</ResourceDictionary>